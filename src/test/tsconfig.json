{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "types": ["codeceptjs", "jest"],
    "baseUrl": "src",
    "paths": {
      "common/*": [
        "main/common/*"
      ],
      "router/*": ["router/*"],
      "routes/*": ["routes/*"],
      "models/*": ["main/common/models/*"],
      "modules/*": ["main/modules/*"],
      "client/*": ["main/app/client/*"]
    }
  }
}

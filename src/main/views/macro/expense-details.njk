{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% macro expenseDetails(hintAmount, property, expenseSource, errors) %}
  <input type="hidden" name="{{ property }}[expenseSource][name]" value="{{ expenseSource.name }}"/>
  {{ govukInput({
    id: property + "[expenseSource][amount]",
    name: property + "[expenseSource][amount]",
    label: {
      text: t("Amount paid")
    },
    prefix: {
      text: "Â£"
    },
    type: "number",
    value: amountValue,
    classes: "govuk-input--width-5",
    hint: {
      text: t(hintAmount)
    },
    spellcheck: false
  }) }}
  {{ govukRadios({
    idPrefix: property + "[expenseSource][schedule]" ,
    name: property + "[expenseSource][schedule]",
    fieldset: {
      legend: {
        text: t("Paid every")
      }
    },
    items: [
      {
        value: ScheduledExpenses.WEEK,
        text: t("Week")
      },
      {
        value: ScheduledExpenses.TWO_WEEKS,
        text: t("Two weeks")
      },
      {
        value: ScheduledExpenses.FOUR_WEEKS,
        text: "Four weeks"
      },
      {
        value: ScheduledExpenses.MONTH,
        text: t("Month")
      }
    ]
  }) }}
{% endmacro %}

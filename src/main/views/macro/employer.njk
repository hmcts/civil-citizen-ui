{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro employerRow(employer, index) %}
  <div id="row-container govuk-grid-column-two-thirds">
    <div class="multiple-row">
      <div class="govuk-form-group {%- if errors.length>0 %} govuk-form-group--error{% endif %}">
        <div class="govuk-grid-column-one-third govuk-!-display-inline">
          {{ govukInput({
              id: "rows["+index+"][employerName]",
              name: "employers["+index+"][employerName]",
              value: employer.employerName,
              hint: { text: t('Employer name') },
              errorMessage: { text: employer.errorFor('employerName') } if employer.hasFieldError('employerName') else ''
            }) }}
          {{ govukInput({
              id: "rows["+index+"][jobTitle]",
              name: "employers["+index+"][jobTitle]",
              value: employer.jobTitle,
              hint: { text: t('Job title') },
              errorMessage: { text: employer.errorFor('jobTitle') } if employer.hasFieldError('jobTitle') else ''
            }) }}
        </div>
      </div>
    </div>
  </div>
{% endmacro %}

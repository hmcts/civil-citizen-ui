{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro employerRow(employer, index, errorFor,t) %}
  <div id="row-container govuk-grid-column-two-thirds">
    <div class="multiple-row">
      <div class="govuk-form-group {%- if errors.length>0 %} govuk-form-group--error{% endif %}">
        <div class="govuk-grid-column-one-third govuk-!-display-inline">
          {{ govukInput({
              id: 'rows[' + index + '][employerName]',
              name: 'rows[' + index + '][employerName]',
              value: employer.employerName,
              hint: { text: t('PAGES.EMPLOYER.EMPLOYER_NAME') },
              errorMessage: { text: t(errorFor('rows[' + index + '][employerName]')) } if t(errorFor('rows[' + index + '][employerName]')) else ''
            }) }}
          {{ govukInput({
              id: 'rows[' + index + '][jobTitle]',
              name: 'rows[' + index + '][jobTitle]',
              value: employer.jobTitle,
              hint: { text: t('PAGES.EMPLOYER.JOB_TITLE') },
              errorMessage: { text: t(errorFor('rows[' + index + '][jobTitle]')) } if t(errorFor('rows[' + index + '][jobTitle]')) else ''
            }) }}
        </div>
      </div>
    </div>
  </div>
{% endmacro %}

{% from "govuk/components/tag/macro.njk" import govukTag %}

{% macro taskComponent(task, t) %}

  <div>
    <li class="app-task-list__item">
       {% if task.status===TaskStatus.NOT_AVAILABLE_YET or task.status===TaskStatus.DONE_NO_URL %}
          <span class="app-task-list__task-name">
             <a>{{ t(task.description) }}</a>
          </span>
       {% else %}
          <span class="app-task-list__task-name">
            <a class="govuk-link" href={{task.url}}>{{ t(task.description) }}</a>
          </span>
       {% endif %}

      {{govukTag({
        text: t('PAGES.TASK_LIST.' + task.status),
        classes: 'app-task-list__tag ' + task.statusColor
      })}}
    </li>
  </div>

{% endmacro %}

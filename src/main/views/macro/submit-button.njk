{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "./cancelLink.njk" import cancelLink %}

{% macro submitButton(t, cancelUrl) %}

<div class="govuk-button-group">
    {{ govukButton({
        text: t('COMMON.BUTTONS.SUBMIT')
    }) }}

    {% if cancelUrl %}
        {{ cancelLink(cancelUrl, t) }}
    {% endif %}

</div>

{% endmacro %}

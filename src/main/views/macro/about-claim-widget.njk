{% from "./new-line.njk" import newLine %}

{% macro aboutClaimWidget(aboutClaimParams) %}
  <div class="govuk-grid-column-one-third  govuk-!-padding-top-9">
    {% if aboutClaimParams.header %}
      <h3 class="govuk-heading-s govuk-!-margin-bottom-1">{{ t(aboutClaimParams.header) }}</h3>
    {% endif %}
    {% for claimLine in aboutClaimParams.lines %}
      {{ newLine(claimLine.title, claimLine.content, claimLine.href, claimLine.hrefContact, claimLine.hint ) }}
    {% endfor %}
  </div>
{% endmacro %}

{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% macro transactionDetails(hintAmount, property, transactionSource, form) %}
  {% set amountValue =  '' + transactionSource.amount %}
  <div class="civil-amountRow">
    <input type="hidden" name="{{ property }}[transactionSource][name]" value="{{ transactionSource.name }}"/>
    {{ govukInput({
      id: property + "[transactionSource][amount]",
      name: property + "[transactionSource][amount]",
      label: {
        text: t("Amount paid")
      },
      prefix: {
        text: "Â£"
      },
      type: "number",
      value: amountValue,
      classes: "govuk-input--width-5 civil-amount",
      hint: {
        text: t(hintAmount)
      },
      spellcheck: false,
      errorMessage: {
        text: form.errorFor(property + "[transactionSource][amount]", "model")
      } if(form.errorFor(property + "[transactionSource][amount]", "model"))
    }) }}
    {{ govukRadios({
      idPrefix: property + "[transactionSource][schedule]" ,
      name: property + "[transactionSource][schedule]",
      classes: "civil-schedule",
      fieldset: {
        legend: {
          text: t("Paid every")
        }
      },
      items: [
        {
          value: TransactionSchedule.WEEK,
          text: t("Week"),
          checked: true if transactionSource.schedule == TransactionSchedule.WEEK
        },
        {
          value: TransactionSchedule.TWO_WEEKS,
          text: t("Two weeks"),
          checked: true if transactionSource.schedule == TransactionSchedule.TWO_WEEKS
        },
        {
          value: TransactionSchedule.FOUR_WEEKS,
          text: "Four weeks",
          checked: true if transactionSource.schedule == TransactionSchedule.FOUR_WEEKS
        },
        {
          value: TransactionSchedule.MONTH,
          text: t("Month"),
          checked: true if transactionSource.schedule == TransactionSchedule.MONTH
        }
      ],
      errorMessage: {
        text: form.errorFor(property + "[transactionSource][schedule]", "model")
      } if(form.hasFieldError(property + "[transactionSource][schedule]", "model"))
    }) }}
  </div>
{% endmacro %}

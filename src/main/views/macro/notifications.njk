{% from "../features/dashboard/item-content.njk" import itemContent %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% macro notifications(dashboardNotifications, t) %}
  {% for notification in dashboardNotifications %}
    {% set html %}
      {% for item in notification.content %}
        {{ itemContent(item, t) }}
      {% endfor %}
    {% endset %}
    {% set titleId = 'notification-banner-title-' ~ loop.index0 %}
    {{ govukNotificationBanner({
      titleText: notification.title,
      titleId: titleId,
      html: html
    }) }}
  {% endfor %}
{% endmacro %}

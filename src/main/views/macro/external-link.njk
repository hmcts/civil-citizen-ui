{% macro externalLink(t, text, href, newWindow, translated, newWindowHidden) %}
  {% if href %}
  <a class="govuk-link" href={{ href }} target="_blank" rel="noreferrer noopener">
    {% if translated %}
      {{ text }}
    {% else %}
     {{ t(text) }}
    {% endif %}
    {% if newWindowHidden %}
      <span class="govuk-visually-hidden">{{ t('COMMON.OPENS_IN_NEW_TAB') }}</span>
    {% endif %}
      {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.OPENS_IN_A_NEW_WINDOW_CARM') if newWindow }}
  </a>
  {% else %}
<p class="govuk-body">
    {% if translated %}
      {{ text }}
    {% else %}
      {{ t(text) }}
    {% endif %}
</p>
  {% endif %}
{% endmacro %}

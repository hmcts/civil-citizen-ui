{% macro externalLink(t, text, href, newWindow, translated) %}
  <a class="govuk-link" href={{ href }} target="_blank" rel="noreferrer noopener">
    {% if translated %}
      {{ text }}
    {% else %}
     {{ t(text) }}
    {% endif %}

    {{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.OPENS_IN_A_NEW_WINDOW') if newWindow }}
  </a>
{% endmacro %}

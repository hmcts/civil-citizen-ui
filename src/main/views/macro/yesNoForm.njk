{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% macro yesNoRadioButton(t,name,errors) %}
              {{ govukRadios({
              idPrefix: "disability",
              name: "disability",
              fieldset: {
                legend: {
                  text: name,
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              items: [
                {
                  value: "yes",
                  html: "<span>" + t('Yes') + "</span>"
                },
                {
                  value: "no",
                  html: "<span>" + t('No') + "</span>"
                }
              ]
            }) }}
{% endmacro %}

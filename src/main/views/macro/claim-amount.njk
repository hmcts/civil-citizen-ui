{% from "govuk/components/input/macro.njk" import govukInput %}

{% macro claimAmount(claimAmountModel, index, form, t) %}
  {% set amountValue = '' + claimAmountModel.amount %}
  {% set reasonId = "claimAmountRows-" + index + "-reason" %}
  {% set amountId = "claimAmountRows-" + index + "-amount" %}
  {% set labelClass = "govuk-label--s govuk-visually-hidden" %}

  <div class="row-container govuk-form-group">
    <div class="multiple-row civil-amount-breakdown-row">
      <div class="govuk-grid-column-one-half govuk-grid-column-two-thirds-from-desktop">
      {{ govukInput({
        id: reasonId,
        name: "claimAmountRows[" + index + "][reason]",
        value: claimAmountModel.reason,
        classes: "govuk-grid-column-full",
        spellcheck: false,
        label: {
          text: t('PAGES.CLAIM_AMOUNT_BREAKDOWN.REASON'),
          classes: labelClass
        },
        errorMessage: {
          text: t(form.errorFor("claimAmountRows[" + index + "][reason]"))
        } if form.hasFieldError("claimAmountRows[" + index + "][reason]")
      }) }}
      </div>
      <div class="govuk-grid-column-one-half govuk-grid-column-one-third-from-desktop">
      {{ govukInput({
        id: amountId,
        name: "claimAmountRows[" + index + "][amount]",
        value: amountValue,
        prefix: {
          text: "Â£"
        },
        autocomplete: "number",
        type: "number",
        classes: "govuk-grid-column-full civil-claim-amount",
        spellcheck: false,
        label: {
          text: t('PAGES.CLAIM_AMOUNT_BREAKDOWN.AMOUNT'),
          classes: labelClass
        },
        errorMessage: {
          text: t(form.errorFor("claimAmountRows[" + index + "][amount]"))
        } if form.hasFieldError("claimAmountRows[" + index + "][amount]")
      }) }}
      </div>
    </div>
  </div>
{% endmacro %}

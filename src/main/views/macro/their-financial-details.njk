  }) }}
{% endmacro %}

{% macro theirFinancialDetails(t, title, claim, financialDetails) %}
  {{ govukDetails({
    summaryText: t(title),
    html: bankAndSavingsAccounts(financialDetails[0], t) +
    children(financialDetails[1], t)  +
    financialSupport(financialDetails[2], t) +
    employmentDetails(financialDetails[3], t) +
    selfEmploymentDetails(financialDetails[4], t) +
    monthlyIncome(financialDetails[5], t) +
    monthlyExpenses(financialDetails[6], t) +
    courtOrders(financialDetails[7], t) +
    debts(financialDetails[8], t)
  }) }}
{% endmacro %}


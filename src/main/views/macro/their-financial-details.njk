{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% macro bankAndSavingsAccounts(financialDetailsRows) %}
  <h4 class="govuk-heading-s">{{ t('COMMON.BANK_AND_SAVINGS_ACCOUNTS') }}</h4>
  {{ govukSummaryList({
    rows: financialDetailsRows
  }) }}
{% endmacro %}


  }) }}
{% endmacro %}

{% macro theirFinancialDetails(t, title, claim, financialDetails) %}
  {{ govukDetails({
    summaryText: t(title),
    html: bankAndSavingsAccounts(financialDetails[0]) +
    children(financialDetails[1]) +
    financialSupport(financialDetails[2]) +
    employmentDetails(financialDetails[3]) +
    selfEmploymentDetails(financialDetails[4]) +
    monthlyIncome(financialDetails[5]) +
    monthlyExpenses(financialDetails[6]) +
    courtOrders(financialDetails[7]) +
    debts(financialDetails[8])
  }) }}
{% endmacro %}


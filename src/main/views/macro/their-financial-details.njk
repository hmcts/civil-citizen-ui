{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% macro bankAndSavingsAccounts(financialDetailsRows, t) %}
  <h4 class="govuk-heading-s">{{ t('COMMON.BANK_AND_SAVINGS_ACCOUNTS') }}</h4>
  {{ govukSummaryList({
    rows: financialDetailsRows
  }) }}
{% endmacro %}

{% macro children(childrenRows, t) %}
  <h4 class="govuk-heading-s govuk-!-margin-top-4">{{ t('COMMON.CHILDREN') }}</h4>
  {{ govukSummaryList({
    rows: childrenRows
  }) }}
{% endmacro %}

{% macro financialSupport(financialSupportRows, t) %}
  <h4 class="govuk-heading-s govuk-!-margin-top-4">{{ t('PAGES.REVIEW_DEFENDANTS_RESPONSE.FINANCIAL_SUPPORT') }}</h4>
  {{ govukSummaryList({
    rows: financialSupportRows
  }) }}
{% endmacro %}


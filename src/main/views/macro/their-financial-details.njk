    rows: childrenRows
  }) }}
{% endmacro %}

{% macro financialSupport(financialSupportRows) %}
  <h4 class="govuk-heading-s govuk-!-margin-top-4">{{ t('PAGES.REVIEW_DEFENDANTS_RESPONSE.FINANCIAL_SUPPORT') }}</h4>
  {{ govukSummaryList({
    rows: financialSupportRows
  }) }}
{% endmacro %}


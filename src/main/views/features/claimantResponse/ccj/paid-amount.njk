{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.CCJ_PAID_AMOUNT.PAGE_TITLE') }}
{% endblock %}

{% set errors = form.getAllErrors() %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        <div class="govuk-grid-row">
          {{ errorSummary(errors,t) }}
        </div>
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.CCJ_PAID_AMOUNT.TITLE') }}</h1>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            {% set id = "option" %}
            {% set name = "option" %}
            {% set yesHtml %}
              {{ govukInput({
                id: "amount",
                name: "amount",
                value: form.model.amount,
                classes: "govuk-!-width-one-half",
                prefix: {
                  text: "Â£"
                },
                label: {
                  text: t('PAGES.CCJ_PAID_AMOUNT.AMOUNT_PAID')
                },
                errorMessage: {
                  html: t(form.errorFor('amount'))
                } if form.errorFor('amount')
              }) }}
            {% endset %}
            {{ yesNoRadioButton(t,id,name, title, form, description, {yesHtml: yesHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

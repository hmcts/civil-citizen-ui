{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% block pageTitle %}
  {{ setPageTitle('PAGES.CLAIMANT_RESPONSE_REPAYMENT_PLAN_ACCEPTED.PAGE_TITLE') }}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.CLAIMANT_RESPONSE_REPAYMENT_PLAN_ACCEPTED.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.CLAIMANT_RESPONSE_REPAYMENT_PLAN_ACCEPTED.THE_COURT_HAS_ACCEPTED_YOUR_REPAYMENT_PLAN') }}</p>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE'),
                href: '/case/' + claimId + '/claimant-response/task-list'
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

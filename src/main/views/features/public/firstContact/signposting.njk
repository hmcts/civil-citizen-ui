{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/external-link.njk" import externalLink %}
{% import "external-urls.njk" as externalURLs %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.FIRST_CONTACT_SIGNPOSTING.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row govuk-!-margin-right-0">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_1') }}</p>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_2') }}</p>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_3') }}</p>
          <h2 class="govuk-heading-m">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.SUBTITLE') }}</h2>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_4_PART_1') }}
            {{ externalLink(t, 'PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_4_CCJ_URL', externalURLs.countyCourtJudgmentsUri, true) }}
            {{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_4_PART_2') }}</p>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_5') }}</p>
          <p class="govuk-body">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.PARAGRAPH_6') }}</p>
        </div>
        <div class="govuk-grid-column-one-third border-top">
          <h2 class="govuk-heading-m">{{ t('PAGES.FIRST_CONTACT_SIGNPOSTING.SUPPORT') }}</h2>
          <ul class="govuk-list">
            <li class="govuk-body-s govuk-!-margin-bottom-3">
              {{ externalLink(t, 'PAGES.FIRST_CONTACT_SIGNPOSTING.SUPPORT_CLAIM_FEES_URL', externalURLs.courtFeesUri, true) }}
            </li>
            <li class="govuk-body-s govuk-!-margin-bottom-3">
              {{ externalLink(t, 'PAGES.FIRST_CONTACT_SIGNPOSTING.SUPPORT_CONTACT_US_URL', externalURLs.countyCourtBusinessCentreUri, true) }}
            </li>
          </ul>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ govukButton({
            text: t('PAGES.FIRST_CONTACT_SIGNPOSTING.START_NOW'), href: claimReferenceUrl, isStartButton: true }) }}
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

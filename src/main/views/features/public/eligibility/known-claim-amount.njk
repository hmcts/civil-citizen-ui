{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/button.njk" import addButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main" aria-labelledby="page-title">
      <div class="govuk-grid-row">
        {% if form.hasErrors() %}
          {{ errorSummary(form.getErrors(), t) }}
        {% endif %}
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l" id="page-title">
            {{ t('PAGES.ELIGIBILITY_KNOWN_CLAIM_AMOUNT.TITLE') }}
          </h1>
          <form method="post" novalidate aria-describedby="page-title" autocomplete="off">
            {{ csrfProtection(csrf) }}
            {{ yesNoRadioButton(
              t,
              'option',           // name of the input
              'option',           // translation key
              '',                 // hint text or null
              form,
              '',                 // form group classes
              {
                classes: 'govuk-radios--inline',
                describedBy: form.hasErrors('option') ? 'option-error' : '',
                ariaDescribedBy: form.hasErrors('option') ? 'option-error' : ''
              }
            ) }}
            <div class="govuk-form-group">
              {{ addButton(t, 'SAVE_AND_CONTINUE_CARM', {
                'id': 'save-and-continue',
                'aria-label': t('ACCESSIBILITY.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

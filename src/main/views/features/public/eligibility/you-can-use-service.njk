{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.YOU_CAN_USE_SERVICE.PAGE_TITLE') }}
{% endblock %}
{% set hideLogout = true  %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.YOU_CAN_USE_SERVICE.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.YOU_CAN_USE_SERVICE.BASED_ON_ANSWERS') }}</p>
          {{ govukButton({
            text: t("COMMON.BUTTONS.CONTINUE"),
            href: urlNextView
          }) }}
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

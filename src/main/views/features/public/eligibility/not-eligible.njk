{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.NOT_ELIGIBLE_FOR_SERVICE.PAGE_TITLE') }}
{% endblock %}
{% set hideLogout = true  %}
{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ t('PAGES.NOT_ELIGIBLE_FOR_SERVICE.PAGE_TITLE') }}</h1>
      {% if reason === NotEligibleReason.CLAIM_VALUE_OVER_25000 %}
        {% include "features/public/eligibility/not-eligible-includes/claim-value-over-25000.njk"%}
      {% elseif reason === NotEligibleReason.CLAIM_VALUE_NOT_KNOWN %}
        {% include "features/public/eligibility/not-eligible-includes/claim-value-not-known.njk"%}
      {% elseif reason === NotEligibleReason.CLAIM_ON_BEHALF %}
        {% include "features/public/eligibility/not-eligible-includes/claim-on-behalf.njk"%}
      {% elseif reason === NotEligibleReason.MULTIPLE_DEFENDANTS %}
        {% include "features/public/eligibility/not-eligible-includes/multiple-defendants.njk"%}
      {% elseif reason === NotEligibleReason.MULTIPLE_CLAIMANTS %}
        {% include "features/public/eligibility/not-eligible-includes/multiple-claimants.njk"%}
      {% elseif reason === NotEligibleReason.UNDER_18_CLAIMANT %}
        {% include "features/public/eligibility/not-eligible-includes/claimant-under-18.njk"%}
      {% elseif reason === NotEligibleReason.DEFENDANT_ADDRESS %}
        {% include "features/public/eligibility/not-eligible-includes/defendant-address.njk"%}
      {% elseif reason === NotEligibleReason.CLAIM_IS_FOR_TENANCY_DEPOSIT %}
        {% include "features/public/eligibility/not-eligible-includes/claim-for-tenancy-deposit.njk"%}
      {% elseif reason === NotEligibleReason.CLAIMANT_ADDRESS %}
        {% include "features/public/eligibility/not-eligible-includes/claimant-address.njk"%}
      {% elseif reason === NotEligibleReason.UNDER_18_DEFENDANT %}
        {% include "features/public/eligibility/not-eligible-includes/under-18-defendant.njk"%}
      {% elseif reason === NotEligibleReason.GOVERNMENT_DEPARTMENT %}
        {% include "features/public/eligibility/not-eligible-includes/government-department.njk"%}
      {% endif %}
      {{ contactUsForHelp(t) }}
    </div>
  </div>
{% endblock %}

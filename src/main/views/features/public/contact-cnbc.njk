{% extends "claim-details-tpl.njk" %}
{% from "../../macro/external-link.njk" import externalLink %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{t(pageTitle)}}</h1>
          <h2 class="govuk-heading-m govuk-!-margin-bottom-0">Webchat</h2>
          {% if isProd %}
            <div id="__8x8-chat-button-container-script_1191773643670e666a982030.90013235"></div>
          {% else %}
            <div id="__8x8-chat-button-container-script_35780229675c3e23dcdd66.11858382"></div>
          {% endif %}
          <h2 class="govuk-heading-m govuk-!-margin-bottom-0 govuk-!-margin-top-6">Telephone</h2>
          <p class="govuk-body govuk-!-margin-bottom-0">0300 123 1056</p>
          <h2 class="govuk-heading-m govuk-!-margin-top-6">Opening Times</h2>
          <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Telephone</h3>
          <p class="govuk-body govuk-!-margin-bottom-0">Monday to Friday, 9am to 5pm</p>
          <h3 class="govuk-heading-s govuk-!-margin-bottom-0">Webchat</h3>
          <p class="govuk-body govuk-!-margin-bottom-0">Monday to Friday, 9am to 5pm</p>
          <br>
          <p class="govuk-body govuk-!-margin-bottom-0">Telephone and webchat closed on Saturdays, Sundays and bank holidays</p>
          <p class="govuk-body">
            {{ externalLink(t, 'Find out about call charges (opens in a new window)', 'https://www.gov.uk/call-charges', false) }}
          </p>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

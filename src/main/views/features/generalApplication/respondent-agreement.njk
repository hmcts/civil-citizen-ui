{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            
            {% set noHtml %}
              {{ govukTextarea({
                name: "reasonForDisagreement",
                id: "reasonForDisagreement",
                value: form.model.reasonForDisagreement,
                label: {
                  text:t('PAGES.GENERAL_APPLICATION.RESPONDENT_AGREEMENT.DISAGREE_EXPLANATION')
                },
                errorMessage: {
                text: t(form.errorFor('reasonForDisagreement'))
              } if form.hasFieldError('reasonForDisagreement')
              }) }}
            {% endset %}

            {{ yesNoRadioButton(t, 'option', 'option', headingWithCaption(t,caption,'PAGES.GENERAL_APPLICATION.RESPONDENT_AGREEMENT.TITLE' ), 
                  form, 
                  t('PAGES.GENERAL_APPLICATION.RESPONDENT_AGREEMENT.TEXT_REVIEW'),{noHtml:noHtml}) }}
            <div class="govuk-button-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
              <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
            </div>
          </form>
        </div>
      <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}
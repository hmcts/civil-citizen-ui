{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}


{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.TITLE') }}
{% endblock %}

{% set yesHtml %}
  <p class="govuk-body govuk-!-margin-bottom-2">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.ASK_YOUR_COSTS_BACK_YES') }}</p>
{% endset -%}

{% block nestedContent %}
          {{ headingWithCaption(t,applicationType,'PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.TITLE') }}
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.JUDGE_MAKE_DECISION') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.IF_APPLICATION_SUCCESS') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.COSTS_INCLUDE.COST_INCLUDE') }}</p>
          <ul class="govuk-list govuk-list--bullet govuk-!-padding-left-6">
             <li>{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.COSTS_INCLUDE.APPLICATION_FEE') }}</li>
             <li>{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.COSTS_INCLUDE.HEARING_COST') }}</li>
          </ul>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.PAY_APPLICATION_FEE') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.OTHER_PARTIES') }}</p>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
             <div class="govuk-form-group">
                {{ yesNoRadioButton(t, 'option', 'option', t('PAGES.GENERAL_APPLICATION.CLAIM_APPLICATION_COST.ASK_YOUR_COSTS_BACK'), form, '', {yesHtml:yesHtml, yes:'COMMON.VARIATION_2.YES', no: 'COMMON.VARIATION_2.NO'}) }}
            </div>
            <div class="govuk-button-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
              <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
            </div>
          </form>
{% endblock %}

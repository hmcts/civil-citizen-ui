{% extends "claim-details-tpl-dashboard.njk" %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.HEARING_PREFERENCE.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{headingWithCaption(t,applicationType,'PAGES.GENERAL_APPLICATION.HEARING_PREFERENCE.TITLE' )}}
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.HEARING_PREFERENCE.CONTENT_1') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.HEARING_PREFERENCE.CONTENT_2') }}</p>
          {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE'),
                href: continueLinkUrl
          }) }}
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

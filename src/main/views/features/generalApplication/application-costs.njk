{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "../dashboard/item-content.njk" import itemContent %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.APPLICATION_COSTS.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ headingWithCaption(t, 'PAGES.GENERAL_APPLICATION.APPLICATION_COSTS.MAKE_AN_APPLICATION', applicationType) }}
          {% for content in applicationCostsContent %}
            {{ itemContent(content,t) }}
          {% endfor %}
          {{ govukButton({
            text: t('COMMON.BUTTONS.START_NOW'),
            href: "#",
            isStartButton: true
          }) }}
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

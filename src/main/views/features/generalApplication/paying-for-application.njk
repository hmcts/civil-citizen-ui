{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.PAYMENT_FOR_APPLICATION.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-caption-l">[{{ t(applicationType) }}]</h1>
          <h1 class="govuk-heading-l">{{ t('PAGES.GENERAL_APPLICATION.PAYMENT_FOR_APPLICATION.TITLE') }}</h1>
          <h1 class="govuk-heading-s govuk-!-margin-bottom-0">{{ t('PAGES.GENERAL_APPLICATION.PAYMENT_FOR_APPLICATION.APPLICATION_FEE') }}</h1>
          <p class="govuk-body">Â£{{ applicationFee }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.PAYMENT_FOR_APPLICATION.YOU_WILL_BE_ASKED') }}</p>

          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-button-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
              <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
            </div>
          </form>
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

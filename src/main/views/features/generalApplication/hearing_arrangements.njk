{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.HEARING_APPLICATION.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ headingWithCaption(t,applicationType,'PAGES.GENERAL_APPLICATION.HEARING_APPLICATION.TITLE') }}
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.HEARING_APPLICATION.MSG1') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.HEARING_APPLICATION.MSG2') }}</p>
          <form method="post" novalidate>
            <div class="govuk-button-group">
              {{ csrfProtection(csrf) }}
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
            </div>
          </form>
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

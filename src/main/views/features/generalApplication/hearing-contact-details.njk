{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "../../macro/citizen-telephone.njk" import citizenTelephone %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.HEARING_CONTACT_DETAILS.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ headingWithCaption(t, applicationType, 'PAGES.GENERAL_APPLICATION.HEARING_CONTACT_DETAILS.TITLE') }}
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            {{ govukInput({
                id: "telephoneNumber",
                name: "telephoneNumber",
                value: form.model.telephoneNumber,
                label: {
                    text: t('PAGES.GENERAL_APPLICATION.HEARING_CONTACT_DETAILS.PREFERRED_TELEPHONE_NUMBER'),
                    classes: "govuk-label--s"
                },
                errorMessage: {
                    html: t(form.errorFor('telephoneNumber'))
                } if form.hasErrors()
            }) }}
            {{ govukInput({
                id: "emailAddress",
                name: "emailAddress",
                value: form.model.emailAddress,
                label: {
                    text: t('PAGES.GENERAL_APPLICATION.HEARING_CONTACT_DETAILS.PREFERRED_EMAIL_ADDRESS'),
                    classes: "govuk-label--s"
                },
                errorMessage: {
                    html: t(form.errorFor('emailAddress'))
                } if form.hasErrors()
            }) }}
            <div class="govuk-button-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
              <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
            </div>
          </form>
        </div>
        <div class="govuk-grid-column-one-third">
            {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
 </div>
{% endblock %}

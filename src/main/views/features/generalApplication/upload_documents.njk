{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form != null and form.hasErrors() %}
        {% set  idValue = "selectedFile" %}
        {% if form.hasErrors() %}
          {{ errorSummary(form.getAllErrors(), t) }}
          {% set errors = translateErrors(form.getAllErrors(),t)[0] %}
          {% set idValue = errors.fieldName %}
        {% endif %}
      {% endif %}
      <div class="govuk-grid-row">
        <dl class="govuk-grid-column-two-thirds">
          {{ headingWithCaption(t, applicationType, 'PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.TITLE') }}
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.MSG1') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.NAME_DOCUMENT') }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.DOCUMENT_TYPE_SIZE') }}</p>

          <form method="post" action="{{ currentUrl }}?_csrf={{ csrf }}" enctype='multipart/form-data' novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-inset-text" >
            {{govukFileUpload({
              id: "idValue",
              name: "selectedFile",
              label: {
                html: '<strong>Upload a file</strong>'
              },
              errorMessage: { text: t(errors.text) } if t(errors.text) else ''
            }) }}
            {{ govukButton({
              id: 'uploadFileButton',
              name: 'action',
              value: 'uploadButton',
              text: t('COMMON.UPLOAD_FILE'),
              classes: "govuk-button--secondary govuk-!-margin-bottom-0"
            }) }}
        </div>
            {% if formattedSummary.summaryList.rows.length > 0 %}
              <h2 class="govuk-heading-m">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.LIST_TITLE') }}</h2>
             {% for row in formattedSummary.summaryList.rows  %}
              <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                  <dt class="govuk-summary-list__key">
                    {{ row.key.text }}
                  </dt>
                  <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="{{ row.actions.items[0].href }}&action=REMOVE_DOC">
                      Remove document<span class="govuk-visually-hidden">
                {{ row.key.text }}</span>
                    </a>
                  </dd>
                </div>
              </dl>
              {% endfor %}
            {% endif %}
            <div class="govuk-button-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.CONTINUE')
              }) }}
              <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
            </div>
          </form>
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

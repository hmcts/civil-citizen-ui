{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "../../macro/external-link.njk" import externalLink %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% import "external-urls.njk" as externalURLs %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.PAY_APPLICATION_FEE.TITLE') }}
{% endblock %}

{% set errors = form.getAllErrors('model') %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        {{ errorSummary(errors, t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ headingWithCaption(t, caption, headingTitle) }}
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.PAY_APPLICATION_FEE.LOW_INCOME') }}
                      {{ externalLink(t, 'PAGES.GENERAL_APPLICATION.PAY_APPLICATION_FEE.HELP_WITH_FEES', externalURLs.feesHelpUrl, false) }}</p>
          <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.PAY_APPLICATION_FEE.MEET_CRITERIA') }}</p>
          <form method="post" novalidate>
          {{ csrfProtection(csrf) }}
          {{ yesNoRadioButton(t, 'option', 'option', t('PAGES.GENERAL_APPLICATION.PAY_APPLICATION_FEE.WANT_TO_APPLY') , form, null, {legendClasses: "govuk-fieldset__legend--m"}) }}
          <div class="govuk-button-group">
            {{ govukButton({
              text: t('COMMON.BUTTONS.CONTINUE')
            }) }}
            <a href="{{ cancelUrl }}" class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
          </div>
        </form>
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

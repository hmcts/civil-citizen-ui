{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "../../../macro/button.njk" import addButton %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.RESPONDENT_UPLOAD_DOCUMENTS.TITLE') }}
{% endblock %}

{% block nestedContent %}
        {% set errors = "" %}
        {% set  idValue = "selectedFile" %}
        {% if form.hasErrors() %}
          {% set errors = translateErrors(form.getAllErrors(),t)[0] %}
          {% set idValue = errors.fieldName %}
        {% endif %}
        {% set uploadFileLabel %}
            <strong>{{ t('COMMON.UPLOAD_FILE_LABEL') }}</strong>
        {% endset %}
        {{ headingWithCaption(t, applicationType, 'PAGES.GENERAL_APPLICATION.RESPONDENT_UPLOAD_DOCUMENTS.TITLE') }}
        <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.RESPONDENT_UPLOAD_DOCUMENTS.MSG1') }}</p>
        <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.NAME_DOCUMENT') }}</p>
        <p class="govuk-body">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.DOCUMENT_TYPE_SIZE_WITH_SAVE_FILE') }}</p>
        <form method="post" action="{{ currentUrl }}?_csrf={{ csrf }}" enctype='multipart/form-data' novalidate>
          {{ csrfProtection(csrf) }}
          <div class="govuk-inset-text" >
            {{ govukFileUpload({
              id: idValue,
              name: "selectedFile",
              label: {
                html: uploadFileLabel
              },
              errorMessage: { text: t(errors.text) } if errors,
              javascript: true,
              chooseFilesButtonText: t('COMMON.CHOOSE_FILE'),
              noFileChosenText: t('COMMON.NO_FILE_CHOSEN')
            }) }}
            {{ govukButton({
              id: 'uploadFileButton',
              name: 'action',
              value: 'uploadButton',
              text: t('COMMON.SAVE_FILE'),
              classes: "govuk-button--secondary govuk-!-margin-bottom-0"
            }) }}
          </div>
          {% if formattedSummary.summaryList.rows.length > 0 %}
            <h2 class="govuk-heading-m">{{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.LIST_TITLE') }}</h2>
            {% for row in formattedSummary.summaryList.rows  %}
              <dl class="govuk-summary-list">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                      {{ row.key.text }}
                    </dt>
                  <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="{{ row.actions.items[0].href }}">
                        {{ t('PAGES.GENERAL_APPLICATION.UPLOAD_DOCUMENTS.REMOVE_DOC') }}<span class="govuk-visually-hidden">
                      {{ row.key.text }}</span>
                    </a>
                  </dd>
                </div>
              </dl>
            {% endfor %}
          {% endif %}
          <div class="govuk-button-group govuk-!-margin-top-8">
          {{ addButton(t, 'CONTINUE', cancelUrl) }}
          </div>
        </form>
{% endblock %}

{% extends "claim-details-tpl-dashboard.njk" %}
{% from "../../../macro/button.njk" import addButton %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../../macro/heading-with-caption.njk" import headingWithCaption %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.GENERAL_APPLICATION.RESPONDENT_WANT_TO_UPLOAD_DOC.PAGE_TITLE') }}
{% endblock %}

{% block nestedContent %}
  {{ headingWithCaption(t,applicationType,'PAGES.GENERAL_APPLICATION.RESPONDENT_WANT_TO_UPLOAD_DOC.TITLE') }}
  <form method="post" novalidate>
    {{ csrfProtection(csrf) }}
    {{ yesNoRadioButton(t, 'option', 'option', '', form, '', {yes: 'COMMON.VARIATION_3.YES', no: 'COMMON.VARIATION_3.NO'}) }}
    <div class="govuk-button-group">
      {{ addButton(t, 'CONTINUE', cancelUrl) }}
    </div>
  </form>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
  {% set yesHtml %}
    <p class="govuk-body">
      {{ t(pageTitle) }}
    </p>
  {% endset -%}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <div class="govuk-!-margin-bottom-8">
            <form method="post" novalidate>
             {{ csrfProtection(csrf) }}
                {{ yesNoRadioButton(t, 'option', 'option', pageText, form, pageHintText, {classes: 'govuk-radios', yes: 'COMMON.VARIATION.YES', no: 'COMMON.VARIATION.NO'}) }}
                {{ govukButton({
                  text: t("COMMON.BUTTONS.SAVE_AND_CONTINUE")
                }) }}
              {{ contactUsForHelp(t) }}
          </form>
          </div>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl-dashboard.njk" %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../dashboard/item-content.njk" import itemContent %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/hint/macro.njk" import govukHint %}
{% from "./fileLink.njk" import fileLink, fileInformation %}
{% from "./createRows.njk" import createRows %}

{% set rows = [] %}
{% for item in items %}
{% set rows = (rows.push([
    {
        html: fileInformation(item.fileName, item.fileUploadDate)
    },
    {
        html: fileLink(item.fileUploadDateInformation.url, item.fileUploadDateInformation.text)
    }]), rows) %}
{% endfor %}

{% block nestedContent %}

{{ govukTable({
    caption: 'tableTitle',
    captionClasses: "govuk-table__caption--m",
    classes: 'tableWrap',
    rows: rows
}) }}
{% endblock %}



{% extends "claim-details-tpl-dashboard.njk" %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "./fileLink.njk" import fileLink, fileInformation %}
{% from "./createRows.njk" import createRows %}

{% set rows = [] %}
{% for item in documentsSection.documents %}
{% set rows = (rows.push([
    {
        html: fileInformation(item.fileName, item.uploadDate)
    },
    {
        html: fileLink(item.linkInformation.url, item.linkInformation.text)
    }]), rows) %}
{% endfor %}

{% block nestedContent %}

{{ govukTable({
    caption: documentsSection.title,
    captionClasses: "govuk-table__caption--m",
    classes: 'tableWrap',
    rows: rows
}) }}

{{ govukButton({
    text: t('Close and return to case overview'),
    href: documentsTabUrl
}) }}
{% endblock %}



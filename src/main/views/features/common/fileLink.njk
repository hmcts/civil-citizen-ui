{% from "govuk/components/hint/macro.njk" import govukHint %}
{% macro fileLink(url, text) %}
    <a class="govuk-link" target="_blank" rel="noreferrer noopener" href="{{ url }}">{{ text }}</a>
{% endmacro %}


{% macro fileInformation(fileName, uploadDate) %}
    <p class="govuk-body govuk-!-margin-bottom-0">{{ fileName }}</p>
    {{
        govukHint({
            text: t('COMMON.UPLOAD_DATE', {uploadDate: uploadDate})
        })
    }}
{% endmacro %}

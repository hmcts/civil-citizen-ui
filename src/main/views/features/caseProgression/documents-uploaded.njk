{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.SUBMIT_CONFIRMATION.PAGE_TITLE') }}
{% endblock %}

{% set panelContent %}
  {{ t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.CASE_REFERENCE_NUMBER')}}
  <br><strong>{{ caseNumber }}</strong><br>
{% endset %}

{% block nestedContent %}
  {{ govukPanel({
    titleText: t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.TITLE'),
    html: panelContent
  }) }}
  <p class="govuk-body">
    {{t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.UPLOAD_MORE_DOCUMENTS_START')}}
    <a class="govuk-link" href={{ uploadYourDocumentsUrl }}> {{t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.UPLOAD_MORE_DOCUMENTS_MID')}} </a>
    {{t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.UPLOAD_MORE_DOCUMENTS_END')}}
  </p>
  <div class="form-group">
      {{ govukButton({
        text: t('PAGES.EVIDENCE_DOCUMENTS_UPLOADED.VIEW_DOCUMENTS'),
        href: documentsPageUrl
      }) }}
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block pageTitle %}
  {{ setPageTitle('TITLE') }}
{% endblock %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    {% if form.hasErrors() %}
    {{ errorSummary(form.getAllErrors(), t) }}
    {% endif %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
         <form method="post" novalidate>
          {{ csrfProtection(csrf) }}
          <h1 class="govuk-heading-l">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CASE_REFERENCE_NUMBER') }}{{claimId}}</p>
          <p class="govuk-body">{{claimantFullName}} v {{defendantFullName}}</p>
          <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.SELECT_THE_TYPE_OF_DOCUMENT') }}</p>
           {% for item in form.model.typeOfDocument %}

           <div class='multiple-row'>
             {{ govukCheckboxes({
             idPrefix: item.documentType,
             id: item.documentType,
             name: item.documentType,
             fieldset: {
             legend: {
             text: item.documentType,
             isPageHeading: false,
             classes: "govuk-fieldset__legend--l"
             }
             },
             items: item.typeOfDocumentItem
             }) }}
           {% endfor %}


         </div>
               <div class="govuk-form-group">
                 {{ govukButton({
                   text: "Continue"
                 }) }}
                 <a class="govuk-link" href="#">Cancel</a>
                 {{ contactUsForHelp(t) }}
               </div>
        </form>
      </div>
    </div>
  </main>
</div>

{% endblock %}

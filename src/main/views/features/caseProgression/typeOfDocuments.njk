{% extends "claim-details-tpl.njk" %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block pageTitle %}
  {{ setPageTitle('TITLE') }}
{% endblock %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    {% if form.hasErrors() %}
    {{ errorSummary(form.getErrors(), t) }}
    {% endif %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">What types of documents do you want to upload?</h1>
         <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CASE_REFERENCE_NUMBER') }}{{claimId}}</p>
         <p class="govuk-body">{{claimantFullName}} v {{defendantFullName}}</p>
         <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.SELECT_THE_TYPE_OF_DOCUMENT') }}</p>
        {% for sections in form.model %}
                      {{ govukCheckboxes({
                              name: "hearingDocuments",
                              fieldset: {
                              legend: {
                              text: sections.title,
                              isPageHeading: true,
                              classes: "govuk-fieldset__legend--l"
                              }
                              },
                              items: sections.items
                              }) }}

        {% endfor %}
               <div class="govuk-button-group">
                 {{ govukButton({
                   text: "Continue"
                 }) }}

                 <a class="govuk-link" href="#">Cancel</a>
               </div>
              {{ contactUsForHelp(t) }}
              </div>
        </form>
      </div>
    </div>
  </main>
</div>

{% endblock %}

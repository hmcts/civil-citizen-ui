{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../dashboard/item-content.njk" import itemContent %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.UPLOAD_YOUR_DOCUMENTS.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: t('COMMON.HOME'),
        href: homeUrl
      },
      {
        text: t('PAGES.UPLOAD_YOUR_DOCUMENTS.TITLE')
      }
    ],
    classes: "govuk-!-margin-top-0"
  }) }}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ csrfProtection(csrf) }}
          {% for content in uploadYourDocumentsContents %}
              {{ itemContent(content,t) }}
          {% endfor %}
        </div>
        <div class="govuk-grid-column-one-third">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

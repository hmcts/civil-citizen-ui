{% from "../dashboard/item-content.njk" import itemContent %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% macro uploadDocumentContent(content,t) %}
   <div class="multiple-row">
      {% if content.contentSections %}
          {% if content.isRemoveButtonHidden %}
            {{ govukButton({
              text: t('PAGES.UPLOAD_DOCUMENTS.REMOVE_SECTION'),
              classes: "govuk-button--secondary remove-row govuk-visually-hidden float-right"
            }) }}
          {% else %}
            {{ govukButton({
              text: t('PAGES.UPLOAD_DOCUMENTS.REMOVE_SECTION'),
              classes: "govuk-button--secondary remove-row float-right"
            }) }}
          {% endif %}
              {% for section in content.contentSections %}
                {{ itemContent(section,t) }}
              {% endfor %}
      {% endif %}
   <div class="govuk-!-margin-top-6">
     {{ govukButton({
      text: t('PAGES.UPLOAD_DOCUMENTS.ADD'),
      classes: 'govuk-button--secondary append-row'
     }) }}
   </div>
   <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
</div>
{% endmacro %}

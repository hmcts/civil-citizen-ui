{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/page-information.njk" import pageInformation %}
{% from "../../macro/dashboard-accordion.njk" import dashboardAccordion %}
{% from "../dashboard/claim-summary-content.njk" import claimSummaryContent %}

{% block nestedContent %}

  {{ pageInformation(t,pageCaption, pageTitle, claimId, claimAmount)}}


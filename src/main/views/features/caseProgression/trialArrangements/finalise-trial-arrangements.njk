{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/tabs/macro.njk" import govukTabs %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../dashboard/item-content.njk" import itemContent %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.FINALISE_TRIAL_ARRANGEMENTS.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container govuk-!-padding-top-0">
    <main class="govuk-main-wrapper govuk-!-padding-top-0" role="main">
      <div class="govuk-grid-row govuk-!-margin-top-0">
        <div class="govuk-grid-column-two-thirds govuk-!-margin-top-0">
          {{ csrfProtection(csrf) }}
          {% for content in finaliseYourTrialContents %}
            {{ itemContent(content,t) }}
          {% endfor %}
          <div class="govuk-button-group">
            {{ govukButton({
              text: t('PAGES.FINALISE_TRIAL_ARRANGEMENTS.START_NOW'),
              isStartButton: true,
              href: finaliseTrialArrangementNextPageUrl
            }) }}
            <a href={{ cancelLinkUrl }} class="govuk-link govuk-!-margin-left-2" rel="noreferrer noopener" >{{ t('COMMON.BUTTONS.CANCEL') }}</a>
          </div>
          {{ contactUsForHelp(t) }}

        </div>
      </div>
    </main>
  </div>
{% endblock %}

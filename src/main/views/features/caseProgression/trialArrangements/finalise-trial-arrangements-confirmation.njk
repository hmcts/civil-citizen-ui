{% extends "claim-details-tpl-dashboard.njk" %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% from "../../../macro/page-title.njk" import setPageTitle %}}
{% from "../../dashboard/item-content.njk" import itemContent %}
{% from "../../../macro/external-link.njk" import externalLink %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.FINALISE_TRIAL_ARRANGEMENTS.CONFIRMATION.PAGE_TITLE') }}
{% endblock %}

{% set titleTextContent %}
  {% if readyForTrialOrHearing %}
    {{ t('PAGES.FINALISE_TRIAL_ARRANGEMENTS.CONFIRMATION.YOU_SAID_CASE_READY_FOR_TRIAL_OR_HEARING') }}
  {% else %}
    {{ t('PAGES.FINALISE_TRIAL_ARRANGEMENTS.CONFIRMATION.YOU_SAID_CASE_NOT_READY_FOR_TRIAL_OR_HEARING') }}
  {% endif %}
{% endset %}

{% block nestedContent %}
  {{ govukPanel({
    titleText: titleTextContent
  }) }}
  {% for item in trialArrangementsConfirmationContent %}
    {{ itemContent(item,t) }}
  {% endfor %}
  <div class="govuk-form-group">
    {{ govukButton({
      text: t('COMMON.BUTTONS.CLOSE_AND_RETURN_TO_CASE_OVERVIEW'),
      href: latestUpdateUrl
    }) }}
  </div>
{% endblock %}

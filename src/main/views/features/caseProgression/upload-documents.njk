{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/evidence.njk" import evidence %}
{% block pageTitle %}
  {{ setPageTitle('PAGES.EVIDENCE.PAGE_TITLE') }}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set titleH1 = t('PAGES.UPLOAD_DOCUMENTS.TITLE') %}
      {% set titleH2 = t('PAGES.UPLOAD_DOCUMENTS.SUBTITLE') %}
      {% set paragraph = t('PAGES.UPLOAD_DOCUMENTS.FORMAT') %}
      {% set errors = form.getAllErrors() %}

      {% if errors.length > 0 %}
        {{ errorSummary(errors,t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <form method="post" novalidate>
          {{ csrfProtection(csrf) }}
          <div class="govuk-grid-column-one-half">
            <h1 class="govuk-heading-l">{{ titleH1 }}</h1>
            <h2 class="govuk-heading-s">{{ titleH2 }}</h2>
            <p class="govuk-body-m">{{ paragraph }}</p>

            <div data-module="moj-add-another" class="select-toggle">


              {% for witnessContent in witnessContent %}
                {{ claimSummaryContent({
                  contentSections: witnessContent.contentSections,
                  hasDivider: witnessContent.hasDivider
                }) }}
              {% endfor %}


              <div class="moj-button-action">
                {{ govukButton({
                    text: t('PAGES.UPLOAD_DOCUMENTS.ADD'),
                    classes: 'govuk-button--secondary moj-add-another__add-button govuk-!-margin-bottom-4'
                  }) }}
              </div>
            </div>

            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </div>
        </form>
      </div>
    </main>
  </div>
{% endblock %}

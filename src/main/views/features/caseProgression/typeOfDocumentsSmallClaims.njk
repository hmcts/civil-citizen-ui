{% extends "claim-details-tpl.njk" %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block pageTitle %}
  {{ setPageTitle('TITLE') }}
{% endblock %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    {% if form.hasErrors() %}
    {{ errorSummary(form.getAllErrors(), t) }}
    {% endif %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
         <form method="post" novalidate>
          {{ csrfProtection(csrf) }}
          <h1 class="govuk-heading-l">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CASE_REFERENCE_NUMBER') }}{{claimId}}</p>
          <p class="govuk-body">{{claimantFullName}} v {{defendantFullName}}</p>
          <p class="govuk-body">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.SELECT_THE_TYPE_OF_DOCUMENT') }}</p>
                  <div class='multiple-row'>
                      {{ govukCheckboxes({
                          idPrefix: 'witness',
                          name: 'witness',
                          fieldset: {
                             legend: {
                             text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.WITNESS_EVIDENCE'),
                             isPageHeading: false,
                             classes: "govuk-fieldset__legend--l"
                            }
                          },
                          items: [
                          {
                            id: 'yourStatement',
                            name: 'yourStatement',
                            value: 'yourStatement',
                            text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.YOUR_STATEMENT'),
                                                        hint: {
                                                             text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.YOUR_STATEMENT_HINT')
                                                        },
                            checked: true if form.model.witness[0].selected
                            },
                          {
                            id: 'witnessStatement',
                            name: 'witnessStatement',
                            value: 'witnessStatement',
                            text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.WITNESS_STATEMENT'),
                                                        hint: {
                                                             text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.WITNESS_STATEMENT_HINT')
                                                        },
                            checked: true if form.model.witness[1].selected
                          },
                          {
                            id: 'summary',
                            name: 'summary',
                            value: 'summary',
                            text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.WITNESS_SUMMARY'),
                                                        hint: {
                                                             text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.WITNESS_SUMMARY_HINT')
                                                        },
                            checked: true if form.model.witness[2].selected
                          },
                          {
                            id: 'witnessDocuments',
                            name: 'witnessDocuments',
                            value: 'witnessDocuments',
                            text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_REFFERED_TO_STATEMENT'),
                                                        hint: {
                                                             text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_REFFERED_TO_STATEMENT_HINT')
                                                        },
                            checked: true if form.model.witness[4].selected
                          }
                          ]
                          }) }}
                          {{ govukCheckboxes({
                              idPrefix: 'expert',
                              name: 'expert',
                              fieldset: {
                                 legend: {
                                 text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.EXPERT_EVIDENCE'),
                                 isPageHeading: false,
                                 classes: "govuk-fieldset__legend--l"
                                }
                              },
                           items: [
                            {
                              id: 'report',
                              name: 'report',
                              value: 'report',
                              text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.EXPERTS_REPORT'),
                              hint: {
                                text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_REFFERED_TO_STATEMENT_HINT')
                              },
                              checked: true if form.model.expert[0].selected
                            }
                            ,
                            {
                              id: 'statement',
                              name: 'statement',
                              value: 'statement',
                              text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.JOINT_STATEMENT_OF_EXPERTS'),
                              hint: {
                                   text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_REFFERED_TO_STATEMENT_HINT')
                              },
                              checked: true if form.model.expert[1].selected
                            }
                          ]
                        }) }}
                      {{ govukCheckboxes({
                            idPrefix: 'trial',
                            name: 'trial',
                            fieldset: {
                               legend: {
                               text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.HEARING_DOCUMENTS'),
                               isPageHeading: false,
                               classes: "govuk-fieldset__legend--l"
                              }
                            },
                            items: [
                             {
                               id: 'documentary',
                               name: 'documentary',
                               value: 'documentary',
                               text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTARY_EVIDENCE_HEARING'),
                               hint: {
                                    text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTARY_EVIDENCE_HEARING_HINT')
                               },
                               checked: true if form.model.trial[4].selected
                             },
                            {
                              id: 'legal',
                              name: 'legal',
                              value: 'legal',
                              text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.LEGAL_AUTHORITIES'),
                              hint: {
                                   text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.LEGAL_AUTHORITIES_HINT')
                              },
                              checked: true if form.model.trial[2].selected
                            }
                            ]
                            }) }}
                  </div>
               <div class="govuk-form-group">
                 {{ govukButton({
                   text: "Continue"
                 }) }}
                 <a class="govuk-link" href="#">Cancel</a>
                 {{ contactUsForHelp(t) }}
               </div>
        </form>
      </div>
    </div>
  </main>
</div>

{% endblock %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% macro claimSummaryContent(params) %}

    {% if params.title %}
      <h3 class="govuk-heading-m">{{ params.title }}</h3>
    {% endif %}
    {% if params.subtitle %}
      <h3 class="govuk-heading-s">{{ params.subtitle }}</h3>
    {% endif %}
    {% if params.content %}
      {% for content in params.content %}
          {{ content | safe }}

      {% endfor %}
    {% endif %}
  {% if params.button %}

    {{ govukButton({
      href: params.button.href,
      text:  params.button.text
    }) }}

  {% endif %}
{% endmacro %}

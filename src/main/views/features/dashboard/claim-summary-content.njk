{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "./item-content.njk" import itemContent %}

{% macro claimSummaryContent(sectionItems) %}

  <div class="govuk-grid-row govuk-!-margin-top-0">
    <div class="govuk-!-margin-3">
      {% if sectionItems.section %}
        {% for content in sectionItems.section %}
          {{ itemContent(content) }}
        {% endfor %}
      {% endif %}
      {% if sectionItems.hasDivider === true %}
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
      {% endif %}
    </div>
  </div>

{% endmacro %}

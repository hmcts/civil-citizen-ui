{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
{{ setPageTitle(t(pageTitle)) }}
{% endblock %}


{% block content %}

{% set checkboxItems = [] %}
{% for item in form.model.typeOfDocuments %}
{% set checkboxItems = (checkboxItems.push(
    {
      text: t(item.text),
      value: item.value,
      checked: item.checked,
      hint: {
        text: t(item.hint)
      }
    }), checkboxItems) %}
{% endfor %}

<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    {% if form.hasErrors() %}
    {{ errorSummary(form.getErrors(), t) }}
    {% endif %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-!-margin-bottom-8">
          <h1 class="govuk-heading-l">{{ t(pageTitle) }}</h1>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <p class="govuk-body-l">{{
              t(
              'PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CASE_REFERENCE_NUMBER', {caseNumber: claimId})}}</p>
            <p class="govuk-body-l">{{partyInformation.claimantName}} v {{partyInformation.defendantName}}</p>
            <p class="govuk-body">{{t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.SELECT_THE_TYPE_OF_DOCUMENT')}}</p>
            <div class='multiple-row'>
              {{
                govukCheckboxes({
                                  idPrefix: 'typeOfDocuments',
                                  id: 'typeOfDocuments',
                                  name: 'typeOfDocuments',
                                  fieldset: {
                                    legend: {
                                      text: t(form.model.title),
                                      isPageHeading: false,
                                      classes: "govuk-fieldset__legend--l"
                                    }
                                },
                hint: {
                  text: t(form.model.hint)
                },
                items: checkboxItems,
                errorMessage: {
                  text:t(form.errorFor('typeOfDocuments'))
                } if form.hasErrors()
              })
              }}
            </div>
            <div class="govuk-button-group">
              {{
                govukButton({
                              text: t('COMMON.BUTTONS.CONTINUE')
              })}}
            </div>
            {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </div>
  </main>
</div>
{% endblock %}

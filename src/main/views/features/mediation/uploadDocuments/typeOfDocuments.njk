{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
{{ setPageTitle(t(pageTitle)) }}
{% endblock %}

{% block content %}

<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    {% if form.hasErrors() %}
    {{ errorSummary(form.getErrors(), t) }}
    {% endif %}
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <div class="govuk-!-margin-bottom-8">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <p class="govuk-body-l">{{
              t(
              'PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CASE_REFERENCE_NUMBER', {caseNumber: claimId})}}</p>
            <p class="govuk-body-l">{{claimantFullName}} v {{defendantFullName}}</p>
            <p class="govuk-body">{{t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.SELECT_THE_TYPE_OF_DOCUMENT')}}</p>
            <div class='multiple-row'>
              {{
                govukCheckboxes({
                                  idPrefix: 'typeOfDocuments',
                                  id: 'typeOfDocuments',
                                  name: 'typeOfDocuments',
                                  fieldset: {
                                    legend: {
                                      text: t(form.model.title),
                isPageHeading: false,
                classes: "govuk-fieldset__legend--l"
              }
              },

                items:[
              {% for item in form.model.items %}
              {
                  id: 'documents',
                  name: 'documents',
                  value: 'documents',
                  text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_FOR_DISCLOSURE'),
                  hint: {
                    text: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.DOCUMENTS_FOR_DISCLOSURE_HINT')
                  },
                  checked: true
              },
              {% endfor %}
                ]
              })}}
            </div>
            <div class="govuk-button-group">
              {{
                govukButton({
                              text: t('COMMON.BUTTONS.CONTINUE')
              })}}
            {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </div>
  </main>
</div>
{% endblock %}

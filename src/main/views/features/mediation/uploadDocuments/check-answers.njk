{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from 'govuk/components/checkboxes/macro.njk' import govukCheckboxes %}
{% from "../../../macro/statement-of-truth.njk" import statementOfTruth %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../dashboard/item-content.njk" import itemContent %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/button.njk" import addButton %}

{% block pageTitle %}
    {{ setPageTitle(t,'PAGES.CHECK_YOUR_ANSWER.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds" role="region" aria-labelledby="check-your-answer-heading">
          {% for content in topPageContents %}
            {{ itemContent(content,t) }}
          {% endfor %}


          {% if summarySections.sections.length > 0 %}
            <h1 id="check-your-answer-heading" class="govuk-heading-l">{{ t('PAGES.MEDIATION.UPLOAD_DOCUMENTS.SECTION_TITLE') }}</h1>
            {% for section in summarySections.sections %}
                  <div class="govuk-!-margin-bottom-9">
                    <h2 id="section-{{ loop.index0 }}-heading" class="govuk-heading-m govuk-!-margin-bottom-2">{{ section.title }}</h2>
                    <div class="govuk-form-group" aria-labelledby="section-{{ loop.index0 }}-heading">
                      {{ govukSummaryList({
                        rows: section.summaryList.rows
                      }) }}
                    </div>
                  </div>
            {% endfor %}
          {% endif %}


          {% for content in bottomPageContents %}
            {{ itemContent(content,t) }}
          {% endfor %}
          <form method="post" novalidate autocomplete="off" aria-describedby="signed-hint">
            {{ csrfProtection(csrf) }}
            <input type="hidden" name="type" value="{{ form.model.type }}">

            <div id="signed-hint" class="govuk-hint">{{ t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CHECK_YOUR_ANSWERS_TITLE') }}</div>
            {{ govukCheckboxes({
              idPrefix: 'signed',
              name: 'signed',
              items: [
                {
                  value: true,
                  html: t('PAGES.UPLOAD_EVIDENCE_DOCUMENTS.CHECK_YOUR_ANSWERS_CORRECT'),
                  checked: true if form.model.signed
                }
              ],
              errorMessage: {
                text:t(form.errorFor(signed))
              } if form.errorFor(signed)
            }) }}

            {{ addButton(t, 'SUBMIT', cancelUrl) }}

            {{ contactUsForHelp(t) }}
          </form>
        </div>
       </div>
    </main>
  </div>

{% endblock %}

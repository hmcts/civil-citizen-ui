{% extends "claim-details-tpl.njk" %}
{% set heading = t('Confirm your details') %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../macros/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        {% if errorList.length > 0 %}
          <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
              {{ t("There was a problem") }}
            </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                {% set error = form.errorFor('birthDate') %}
              </ul>
            </div>
          </div>
        {% endif %}
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('Enter your date of birth') }}</h1>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post">
              {% set errorMessage =  errors.day.text if errors.day %}
              {% set errorMessage =  errors.month.text if errors.month else errorMessage %}
              {% set errorMessage =  errors.year.text if errors.year else errorMessage %}
              {% set errorMessage =  errors.date.text if errors.date else errorMessage %}

             {{ govukDateInput({
                    id: "birthDate",
                    type: "number",
                    inputmode: "numeric",
                    name: "birthDate",
                    fieldset: {
                      legend: {
                        isPageHeading: false,
                        classes: 'govuk-fieldset__legend--m'
                      }
                    },
                    hint: {
                      text: "For example, 31 3 1980"
                    },
                    errorMessage: {
                         html: errorMessage
                    } if errors,
                    items: [
                      {
                        classes: "govuk-input--width-2 govuk-input--error" if errorMessage else "govuk-input--width-2",
                        id: "day",
                        label: "Day",
                        name: "day",
                        value: day,
                        max: 31
                      },
                      {
                        classes:"govuk-input--width-2 govuk-input--error" if errorMessage else "govuk-input--width-2",
                        id: "month",
                        label: "Month",
                        name: "month",
                        value: month,
                        max: 12
                      },
                      {
                        classes: "govuk-input--width-4 govuk-input--error" if errorMessage else "govuk-input--width-4",
                        id: "year",
                        label: "Year",
                        name: "year",
                        value: year,
                        max: 9999
                      }
                      ]
                  }) }}
            {{ govukButton({ text: t("Save and continue") }) }}
            {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}


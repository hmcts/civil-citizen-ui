{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getErrors() %}
      {% if errors %}
        {{ govukErrorSummary({
          "titleText": 'There was a problem',
          "errorList": errors
        }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('Where do you live?') }}</h1>
          <form
            method="POST">

            {{ csrfProtection(csrf) }}

            {% set error = form.getErrors() %}
            <div class="govuk-form-group {% if error %} govuk-form-group--error {% endif %}">
              {#                <legend class="visually-hidden">{{ t('Where do you live?') }}</legend> #}
              {#                {% if error %}<span class="error-message">{{ t(error) }}</span>{% endif %} #}

              {% set housingDetailsHtml %}
                {{ govukInput({
                  id: "housingDetails",
                  name: "housingDetails",
                  value: form.model.housingDetails,
                  classes: "govuk-!-width-two-third",
                  label: {
                    text: t('What type of housing?')
                  },
                  errorMessage: {
                    text: t(errors[0].text)
                  } if errors[0]
                }) }}
              {% endset -%}

              {{ govukRadios({
                idPrefix: "residenceType",
                name: "type",
                hint: {
                  text: t('Select one option')
                },
                items: [
                  {
                    value: ResidenceType.OWN_HOME.value,
                    text: t(ResidenceType.OWN_HOME.displayValue),
                    checked: form.model.type.value === ResidenceType.OWN_HOME.value
                  },
                  {
                    value: ResidenceType.JOINT_OWN_HOME.value,
                    text: t(ResidenceType.JOINT_OWN_HOME.displayValue),
                    checked: form.model.type.value === ResidenceType.JOINT_OWN_HOME.value
                  },
                  {
                    value: ResidenceType.PRIVATE_RENTAL.value,
                    text: t(ResidenceType.PRIVATE_RENTAL.displayValue),
                    checked: form.model.type.value === ResidenceType.PRIVATE_RENTAL.value
                  },
                  {
                    value: ResidenceType.COUNCIL_OR_HOUSING_ASSN_HOME.value,
                    text: t(ResidenceType.COUNCIL_OR_HOUSING_ASSN_HOME.displayValue),
                    checked: form.model.type.value === ResidenceType.COUNCIL_OR_HOUSING_ASSN_HOME.value
                  },
                  {
                    value: ResidenceType.OTHER.value,
                    text: t(ResidenceType.OTHER.displayValue),
                    checked: form.model.type.value === ResidenceType.OTHER.value,
                    conditional: {
                      html: housingDetailsHtml
                    }
                  }
                ],
                errorMessage: {
                  html: t(errors[0].text)
                } if errors
              }) }}

            </div>

            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
            </div>

          </form>

        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-thirds">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}


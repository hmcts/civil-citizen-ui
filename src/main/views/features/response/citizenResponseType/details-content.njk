{% from "govuk/components/details/macro.njk" import govukDetails %}
{% macro detailsContent(componentDetailItemsList) %}
  {% for item in componentDetailItemsList %}
    {% if item.title %}
      <h3 class="govuk-heading-m">{{ t(item.title) }}</h3>
    {% endif %}
    {% if item.subtitle %}
      <h3 class="govuk-heading-s">{{ t(item.subtitle) }}</h3>
    {% endif %}
    {% if item.content %}
      {% for content in item.content %}
        <p class="govuk-body">{{ t(content) }}</p>
      {% endfor %}
    {% endif %}
  {% endfor %}
{% endmacro %}

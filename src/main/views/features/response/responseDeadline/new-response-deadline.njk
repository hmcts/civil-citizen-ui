{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.NEW_RESPONSE_DEADLINE.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  {{ govukBackLink({
    text: t("COMMON.BUTTONS.BACK"),
    href: backUrl
  }) }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-l">{{ t('PAGES.NEW_RESPONSE_DEADLINE.PAGE_TITLE') }}</h1>
      <h2
        class="govuk-heading-m">{{ t('PAGES.NEW_RESPONSE_DEADLINE.TITLE',  {responseDeadline: responseDeadline}) }}</h2>
      <p class="govuk-body">{{ t('PAGES.NEW_RESPONSE_DEADLINE.CONTENT', {claimantName : claimantName}) }}
      <div class="govuk-form-group">
        <form method="post" novalidate>
          {{ csrfProtection(csrf) }}
          <input type="hidden" value="{{ responseDeadline }}" name="agreedResponseDeadline"/>
          {{ govukButton({
            text: t('COMMON.BUTTONS.CONTINUE')
          }) }}
        </form>
      </div>
      {{ contactUsForHelp(t) }}
    </div>
  </div>
{% endblock %}


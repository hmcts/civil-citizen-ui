{% extends "claim-details-tpl.njk" %}
{% from "../../macro/remaining-tasks-fragment.njk" import remainingTasksFragment %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.INCOMPLETE_SUBMISSION.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row govuk-!-margin-bottom-6">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.INCOMPLETE_SUBMISSION.TITLE') }}</h1>
          {{ csrfProtection(csrf) }}
          {{ remainingTasksFragment(
            tasks = tasks,
            backLink = taskListUri,
            translationFunction = t
          ) }}
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-thirds">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>

{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.UNDER_18.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.UNDER_18.TITLE') }}</h1>
        </div>
      </div>

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <p
            class="govuk-body">{{ t('PAGES.UNDER_18.CONTENT') }}</p>
          <h3 class='govuk-heading-m'>{{ t('COMMON.CONTACT_US_FOR_HELP.EMAIL') }} </h3>
          <p class="govuk-body">
            <a href='mailto:contactocmc@justice.gov.uk'>contactocmc@justice.gov.uk</a>
          </p>
          <h3 class='govuk-heading-m'>{{ t('COMMON.CONTACT_US_FOR_HELP.TELEPHONE') }}</h3>
          <p class="govuk-body">{{ t('COMMON.POSTAL_ADDRESS.TELEPHONE') }}<br/>
            {{ t('COMMON.CONTACT_US_FOR_HELP.OPENING_HOURS') }}<br/>
            <a href='https://www.gov.uk/call-charges'
               target='_blank'>{{ t('COMMON.CONTACT_US_FOR_HELP.CALL_CHARGES') }}</a>
          </p>
          <p class="govuk-body">
            {{ t('PAGES.UNDER_18.ABLE_TO_GET_ADVICE') }}
            <a href="https://www.citizensadvice.org.uk/about-us/contact-us/"
               target='_blank'>{{ t('PAGES.UNDER_18.CITIZEN_ADVICE') }}</a>
          </p>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

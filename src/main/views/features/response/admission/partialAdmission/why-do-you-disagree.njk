{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set header = 'Why do you disagree with the claim amount?' %}
      {% set subTitle = t('The total amount claimed is Â£{{ claimAmount }}. This includes the claim fee.', { claimAmount: claimAmount }) %}
      {% set errors = form.getAllErrors()%}
      {% if form.hasErrors() %}
      {{ govukErrorSummary({
        "titleText": t("There was a problem"),
        "errorList": errors
      }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l govuk-!-margin-bottom-1">{{header}}</h1>
          <form novalidate method="post">
           {{ csrfProtection(csrf) }}
            <p class="govuk-body">{{ subTitle }}</p>
            {{ govukTextarea({
              name: "text",
              id: "text",
              value: form.model.text,
              errorMessage: {
                text:t(form.errorFor('text'))
              } if form.errorFor('text')
            }) }}
            <div class="govuk-form-group">
            {{ govukButton({
              text: t("Save and continue")
            }) }}
            {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

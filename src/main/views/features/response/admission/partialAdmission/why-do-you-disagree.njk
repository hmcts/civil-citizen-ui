{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../../macro/csrf.njk" import csrfProtection %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% set heading = 'Why do you disagree with the claim amount?' %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getErrors() %}
      {% if errors %}
      {{ govukErrorSummary({
        "titleText": t("There was a problem"),
        "errorList": errors
      }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form novalidate method="post">
            {{ csrfProtection(csrf) }}

            <p>{{ t('The total amount claimed is {{ totalAmount }}. This includes the claim fee.',
                { totalAmount: form.model.totalAmount | numeral }) }}</p>

            {{ govukTextarea({
              name: "reason",
              id: "reason",
              label: {
                text: t("Reason")
              },
              value: form.reason,
              errorMessage: {
                text:t(form.errorFor('reason'))
              } if form.hasFieldError('reason')
            }) }}

            {{ saveAndContinueButton() }}
            {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.PARTIAL_ADMISSION_HOW_MUCH_DO_YOU_OWE.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set title = t('PAGES.PARTIAL_ADMISSION_HOW_MUCH_DO_YOU_OWE.TITLE') %}
      {% set description = t('PAGES.PARTIAL_ADMISSION_HOW_MUCH_DO_YOU_OWE.SUBTITLE', { totalAmount: form.model.totalAmount }) %}
      {% set amountAsString = '' + form.model.amount %}
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">{{ title }}</h1>
            </legend>
            {{ govukInput({
              id: "amount",
              name: "amount",
              value: amountAsString,
              type: "number",
              autocomplete: "number",
              spellcheck: false,
              text: title,
              label: {
                text: t('PAGES.PARTIAL_ADMISSION_HOW_MUCH_DO_YOU_OWE.TITLE'),
                classes: 'govuk-visually-hidden'
              },
              prefix: {
                text: "Â£"
              },
              classes: "govuk-!-width-two-thirds",
              hint : {
                text: description
              },
              errorMessage: {
                text: t(form.errorFor('amount'))
              } if form.hasFieldError('amount')
            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

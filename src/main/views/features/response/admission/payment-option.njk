{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% set pageTitle = 'PAGES.PARTIAL_ADMISSION_PAYMENT_OPTION.PAGE_TITLE' if amount else 
  'PAGES.FULL_ADMISSION_PAYMENT_OPTION.PAGE_TITLE' %}
{% set title = 'When do you want to pay Â£' + amount + '?' if amount else 
  'When do you want to pay?' %}

{% block pageTitle %}

  {{ setPageTitle(pageTitle) }}

{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set hintPayImmediatly %}
      <div
          class='govuk-hint'>{{ t('COMMON.PAYMENT_OPTION.HINT_PAY_IMMEDIATELY') }}</div>
      {% endset -%}

      {% set hintPayLater %}
      <div
          class='govuk-hint'>{{ t('COMMON.PAYMENT_OPTION.HINT_PAY_LATER') }}</div>
      {% endset -%}
      {% set errors = form.getErrors() %}
      {% if form.hasErrors() %}
        {{ govukErrorSummary({
          "titleText": t('ERRORS.THERE_WAS_A_PROBLEM'),
          "errorList": errors
        }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            {{ govukRadios({
              idPrefix: "paymentOption",
              name: "paymentType",
              fieldset: {
                legend: {
                  text: t('COMMON.PAYMENT_OPTION.WHY_DO_YOU_WANT_TO_PAY_WITH_AMOUNT', { amount : amount }) if amount else t('COMMON.PAYMENT_OPTION.WHY_DO_YOU_WANT_TO_PAY'),
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              items: [
                {
                  value: PaymentOptionType.IMMEDIATELY,
                  text: t('COMMON.PAYMENT_OPTION.IMMEDIATELY'),
                  checked: true if form.model.paymentType == PaymentOptionType.IMMEDIATELY,
                  conditional: {
                  html: hintPayImmediatly
                }
                },
                {
                  value: PaymentOptionType.BY_SET_DATE,
                  text: t('COMMON.PAYMENT_OPTION.BY_SET_DATE'),
                  checked: true if form.model.paymentType == PaymentOptionType.BY_SET_DATE,
                  conditional: {
                  html: hintPayLater
                }
                },
                {
                  value: PaymentOptionType.INSTALMENTS,
                  text: t('COMMON.PAYMENT_OPTION.REPAYMENT_PLAN'),
                  checked: true if form.model.paymentType == PaymentOptionType.INSTALMENTS,
                  conditional: {
                  html: hintPayLater
                }
                }
              ],
              errorMessage: {
                text: t(form.errorFor('paymentType'))
              } if form.hasFieldError('paymentType')

            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}
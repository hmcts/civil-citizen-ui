{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.UNDERSTANDING_YOUR_OPTIONS.PAGE_TITLE') }}
{% endblock %}

{% set REQUEST_EXTENSION_DEFAULT %}
    {% if isReleaseTwoEnabled %}
        {{  t('PAGES.UNDERSTANDING_YOUR_OPTIONS.REQUEST_EXTENSION_DEFAULT_R2') | safe }}
    {% else %}
        {{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.REQUEST_EXTENSION_DEFAULT') | safe }}
    {% endif %}
{% endset %}


{% set REQUEST_EXTENSION_MORE %}
    {% if isReleaseTwoEnabled %}
        {{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.REQUEST_EXTENSION_MORE_R2') | safe  }}
    {% else %}
        {{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.REQUEST_EXTENSION_MORE') | safe  }}
    {% endif %}
{% endset %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">{{  t('PAGES.UNDERSTANDING_YOUR_OPTIONS.PAGE_TITLE') }}</h1>
        <h2 class="govuk-heading-m">{{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.CURRENT_DEADLINE', {responseDeadline: responseDate}) }}</h2>
        <p class="govuk-body"> {{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.UNABLE_TO_RESPOND_BEFORE_DEADLINE') }}</p>
        <h3 class="govuk-heading-m"> {{ t('PAGES.UNDERSTANDING_YOUR_OPTIONS.HOW_MUCH_EXTRA') }}</h3>
        <p class="govuk-body">{{ REQUEST_EXTENSION_DEFAULT }}</p>
        <p class="govuk-body">{{ REQUEST_EXTENSION_MORE  }}</p>
        {{ govukButton({
          text: t('COMMON.BUTTONS.CONTINUE'),
          href: './response-deadline-options'
        }) }}
        {{ contactUsForHelp(t) }}
      </div>
    </div>
  </main>
</div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.EXPLANATION.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getErrors() %}
      {% if form.hasErrors() %}
        {{ errorSummary(errors, t) }}
      {% endif %}

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-form-group {% if errors.length %} govuk-form-group--error {% endif %}">
              {{ govukTextarea({
              name: "text",
              id: "text",
              value: form.model.text,
              classes:"govuk-!-width-three-quarters",
              label: {
                text: t("PAGES.EXPLANATION.TITLE"),
                classes: "govuk-label--l"
              },
              errorMessage: {
                text: t(form.errorFor('text'))
              } if form.hasFieldError('text')
            }) }}
              <div class="govuk-form-group">
                {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
                {{ contactUsForHelp(t) }}
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/bank-account.njk" import bankAccountRow %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.CITIZEN_BANK_ACCOUNTS.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set formErrors = form.getFormErrors() %}
      {% if formErrors %}
        {{ govukErrorSummary({
          "titleText": t('ERRORS.THERE_WAS_A_PROBLEM'),
          "errorList": translateErrors(formErrors, t)
        }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.CITIZEN_BANK_ACCOUNTS.TITLE') }}</h1>
          <p class="govuk-body">
            {{ t('PAGES.CITIZEN_BANK_ACCOUNTS.AMOUNT_EXAMPLE') }}
          </p>
        </div>
      </div>
      <div class="govuk-grid-row">
        <form name="accounts" method="post" novalidate>
          {{ csrfProtection(csrf) }}
          <div class="govuk-grid-column-one-third govuk-!-display-inline">
            <label id="account-balance-label" class="govuk-label--s">{{ t('PAGES.CHECK_YOUR_ANSWER.BANK_TYPE_OF_ACCOUNT') }}</label>
          </div>
          <div class="govuk-grid-column-one-third govuk-!-display-inline">
            <label id="account-balance-label" class="govuk-label--s">{{ t('PAGES.CHECK_YOUR_ANSWER.BANK_JOINT_ACCOUNT') }}</label>
          </div>
          <div class="govuk-grid-column-one-third govuk-!-display-inline">
            <label id="account-balance-label" class="govuk-label--s">{{ t('PAGES.CHECK_YOUR_ANSWER.BANK_TYPE_OF_ACCOUNT')  }}</label>
          </div>
          {% for account in form.accounts %}
            {{ bankAccountRow(account, bankAccountDropDownItems, loop.index0, t) }}
          {% endfor %}
          <div class="govuk-grid-column-two-thirds">
            {{ govukButton({
              text: t('PAGES.CITIZEN_BANK_ACCOUNTS.ADD_ANOTHER_ACCOUNT'),
              classes: "govuk-button--secondary append-row"
            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
            </div>
          </div>
        </form>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}


{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/expense-details.njk" import expenseDetails %}
{% block content %}
  {% set errors = form.getErrors() %}
  {% if form.hasErrors() %}
    {{ govukErrorSummary({
      "titleText": t("There was a problem"),
      "errorList": errors
    }) }}
  {% endif %}
  {% set checkedMortgageHtml %}
    {{ expenseDetails('Include all mortgages', 'model[mortgage]',  form.model.mortgage.expenseSource) }}
  {% endset -%}
  {% set checkedRentHtml %}
    {{ expenseDetails('', 'model[rent]',  form.model.rent.expenseSource) }}
  {% endset -%}
  {% set checkedCouncilTaxHtml %}
    {{ expenseDetails('', 'model[councilTax]',  form.model.councilTax.expenseSource) }}
  {% endset -%}
  {% set checkedGasHtml %}
    {{ expenseDetails('', 'model[gas]', form.model.gas.expenseSource) }}
  {% endset -%}
  {% set checkedElectricityHtml %}
    {{ expenseDetails('', 'model[electricity]', form.model.electricity.expenseSource) }}
  {% endset -%}
  {% set checkedWaterHtml %}
    {{ expenseDetails('Include sewerage payments', 'model[water]', form.model.water.expenseSource) }}
  {% endset -%}
  {% set checkedTravelHtml %}
    {{ expenseDetails('', 'model[travel]', form.model.travel.expenseSource) }}
  {% endset -%}
  {% set checkedSchoolHtml %}
    {{ expenseDetails('', 'model[schoolCosts]', form.model.expenseSource.schoolCosts.expenseSource) }}
  {% endset -%}
  {% set checkedFoodHtml %}
    {{ expenseDetails('', 'model[foodAndHousekeeping]',  form.model.foodAndHousekeeping.expenseSource) }}
  {% endset -%}
  {% set checkedTvHtml %}
    {{ expenseDetails('', 'model[tvAndBroadband]',  form.model.tvAndBroadband.expenseSource) }}
  {% endset -%}
  {% set checkedHirePurchaseHtml %}
    {{ expenseDetails('', 'model[hirePurchase]',  form.model.hirePurchase.expenseSource.amount) }}
  {% endset -%}
  {% set checkedMobileHtml %}
    {{ expenseDetails('', 'model[mobilePhone]', form.model.mobilePhone.expenseSource) }}
  {% endset -%}
  {% set checkedMaintenanceHtml %}
    {{ expenseDetails('', 'model[maintenance]', form.model.maintenance.expenseSource) }}
  {% endset -%}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

            {{ govukCheckboxes({
              idPrefix: "declared",
              name: "declared",
              fieldset: {
                legend: {
                  text: t("What are your regular expenses?"),
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              hint: {
                text: t('Select all that apply. The information you enter must be truthful and accurate. Do not include any arrears repayments.')
              },
              items: [
                {
                  value: "mortgage",
                  text: t("Mortgage"),
                  conditional: {
                  html: checkedMortgageHtml
                }
                },
                {
                  value: "rent",
                  text: t("Rent"),
                  conditional: {
                  html: checkedRentHtml
                }
                },
                {
                  value: "councilTax",
                  text: t("Council Tax"),
                  conditional: {
                  html: checkedCouncilTaxHtml
                }
                },
                {
                  value: "gas",
                  text: t("Gas"),
                  conditional: {
                  html: checkedGasHtml
                }
                },
                {
                  value: "electricity",
                  text: t("Electricity"),
                  conditional: {
                  html: checkedElectricityHtml
                }
                },
                {
                  value: "water",
                  text: t("Water"),
                  conditional: {
                  html: checkedWaterHtml
                }
                },
                {
                  value: "travel",
                  text: t("Travel"),
                  conditional: {
                  html: checkedTravelHtml
                }
                },
                {
                  value: "schoolCosts",
                  text: t("School costs (include clothing)"),
                  conditional: {
                  html: checkedSchoolHtml
                }
                },
                {
                  value: "foodAndHousekeeping",
                  text: t("Food and housekeeping"),
                  conditional: {
                  html: checkedFoodHtml
                }
                },
                {
                  value: "tvAndBroadband",
                  text: t("TV and broadband"),
                  conditional: {
                  html: checkedTvHtml
                }
                },
                {
                  value: "hirePurchase",
                  text: t("Hire purchase"),
                  conditional: {
                  html: checkedHirePurchaseHtml
                }
                },
                {
                  value: "mobilePhone",
                  text: t("Mobile phone"),
                  conditional: {
                  html: checkedMobileHtml
                }
                },
                {
                  value: "maintenance",
                  text: t("Maintenance payments"),
                  conditional: {
                  html: checkedMaintenanceHtml
                }
                }
              ]
            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

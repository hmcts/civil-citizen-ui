{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/expense-details.njk" import expenseDetails %}
{% block content %}
  {% set errors = form.getErrors() %}
  {% if form.hasErrors() %}
    {{ govukErrorSummary({
      "titleText": t("There was a problem"),
      "errorList": errors
    }) }}
  {% endif %}
  {% set checkedMortgageHtml %}
    {{ expenseDetails('Include all mortgages', 'mortgage', form.mortgage.expenseSource.amount) }}
  {% endset -%}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

            {{ govukCheckboxes({
              idPrefix: "model",
              name: "model",
              fieldset: {
                legend: {
                  text: t("What are your regular expenses?"),
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              hint: {
                text: t('Select all that apply. The information you enter must be truthful and accurate. Do not include any arrears repayments.')
              },
              items: [
                {
                  value: "mortgage",
                  text: t("Mortgage"),
                  conditional: {
                  html: checkedMortgageHtml
                }
                },
                {
                  value: "rent",
                  text: t("Rent")
                },
                {
                  value: "councilTax",
                  text: t("Council Tax")
                },
                {
                  value: "gas",
                  text: t("Gas")
                },
                {
                  value: "electricity",
                  text: t("Electricity")
                },
                {
                  value: "electricity",
                  text: t("Electricity")
                },
                {
                  value: "water",
                  text: t("Water")
                },
                {
                  value: "travel",
                  text: t("Travel")
                },
                {
                  value: "schoolCosts",
                  text: t("School costs (include clothing)")
                },
                {
                  value: "foodAndHousekeeping",
                  text: t("Food and housekeeping")
                },
                {
                  value: "tvAndBroadband",
                  text: t("TV and broadband")
                },
                {
                  value: "hirePurchase",
                  text: t("Hire purchase")
                },
                {
                  value: "mobilePhone",
                  text: t("Mobile phone")
                },
                {
                  value: "maintenance",
                  text: t("Maintenance payments")
                }
              ]
            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

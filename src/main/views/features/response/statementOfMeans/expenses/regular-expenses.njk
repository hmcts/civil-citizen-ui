{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/transaction-details.njk" import transactionDetails %}
{% block content %}
  {% set errors = form.getNestedErrors('model') %}
  {% if form.hasErrors() %}
    {{ govukErrorSummary({
      "titleText": t("There was a problem"),
      "errorList": errors
    }) }}
  {% endif %}
  {% set amountLabel = 'Amount paid' %}
  {% set scheduleLabel = 'Paid every' %}
  {% set checkedMortgageHtml %}
    {{ transactionDetails('Include all mortgages', 'model[mortgage]',  form.model.mortgage.transactionSource, amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedRentHtml %}
    {{ transactionDetails('', 'model[rent]',  form.model.rent.transactionSource, amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedCouncilTaxHtml %}
    {{ transactionDetails('', 'model[councilTax]',  form.model.councilTax.transactionSource, amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedGasHtml %}
    {{ transactionDetails('', 'model[gas]', form.model.gas.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedElectricityHtml %}
    {{ transactionDetails('', 'model[electricity]', form.model.electricity.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedWaterHtml %}
    {{ transactionDetails('Include sewerage payments', 'model[water]', form.model.water.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedTravelHtml %}
    {{ transactionDetails('', 'model[travel]', form.model.travel.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedSchoolHtml %}
    {{ transactionDetails('', 'model[schoolCosts]', form.model.schoolCosts.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedFoodHtml %}
    {{ transactionDetails('', 'model[foodAndHousekeeping]',  form.model.foodAndHousekeeping.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedTvHtml %}
    {{ transactionDetails('', 'model[tvAndBroadband]',  form.model.tvAndBroadband.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedHirePurchaseHtml %}
    {{ transactionDetails('', 'model[hirePurchase]',  form.model.hirePurchase.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedMobileHtml %}
    {{ transactionDetails('', 'model[mobilePhone]', form.model.mobilePhone.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  {% set checkedMaintenanceHtml %}
    {{ transactionDetails('', 'model[maintenance]', form.model.maintenance.transactionSource,amountLabel, scheduleLabel, form) }}
  {% endset -%}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

            {{ govukCheckboxes({
              idPrefix: "declared",
              name: "declared",
              fieldset: {
                legend: {
                  text: t("What are your regular expenses?"),
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l"
                }
              },
              hint: {
                text: t('Select all that apply. The information you enter must be truthful and accurate. Do not include any arrears repayments.')
              },
              items: [
                {
                  value: "mortgage",
                  text: t("Mortgage"),
                  conditional: {
                  html: checkedMortgageHtml
                },
                  checked: true if form.model.mortgage.declared
                },
                {
                  value: "rent",
                  text: t("Rent"),
                  conditional: {
                  html: checkedRentHtml
                },
                  checked: true if form.model.rent.declared
                },
                {
                  value: "councilTax",
                  text: t("Council Tax"),
                  conditional: {
                  html: checkedCouncilTaxHtml
                },
                  checked: true if form.model.councilTax.declared
                },
                {
                  value: "gas",
                  text: t("Gas"),
                  conditional: {
                  html: checkedGasHtml
                },
                  checked: true if form.model.gas.declared
                },
                {
                  value: "electricity",
                  text: t("Electricity"),
                  conditional: {
                  html: checkedElectricityHtml
                },
                  checked: true if form.model.electricity.declared
                },
                {
                  value: "water",
                  text: t("Water"),
                  conditional: {
                  html: checkedWaterHtml
                },
                  checked: true if form.model.water.declared
                },
                {
                  value: "travel",
                  text: t("Travel (work or school)"),
                  conditional: {
                  html: checkedTravelHtml
                },
                  checked: true if form.model.travel.declared
                },
                {
                  value: "schoolCosts",
                  text: t("School costs (include clothing)"),
                  conditional: {
                  html: checkedSchoolHtml
                },
                  checked: true if form.model.schoolCosts.declared
                },
                {
                  value: "foodAndHousekeeping",
                  text: t("Food and housekeeping"),
                  conditional: {
                  html: checkedFoodHtml
                },
                  checked: true if form.model.foodAndHousekeeping.declared
                },
                {
                  value: "tvAndBroadband",
                  text: t("TV and broadband"),
                  conditional: {
                  html: checkedTvHtml
                },
                  checked: true if form.model.tvAndBroadband.declared
                },
                {
                  value: "hirePurchase",
                  text: t("Hire purchase"),
                  conditional: {
                  html: checkedHirePurchaseHtml
                },
                  checked: true if form.model.hirePurchase.declared
                },
                {
                  value: "mobilePhone",
                  text: t("Mobile phone"),
                  conditional: {
                  html: checkedMobileHtml
                },
                  checked: true if form.model.mobilePhone.declared
                },
                {
                  value: "maintenance",
                  text: t("Maintenance payments"),
                  conditional: {
                  html: checkedMaintenanceHtml
                },
                  checked: true if form.model.maintenance.declared
                }
              ]
            }) }}

            <div class="govuk-form-group">
              <p class="govuk-fieldset__legend govuk-fieldset__legend--m" role="status" aria-live="polite">
                {{ t('Total monthly expenditure') }}: Â£
                <span class="total-monthly-income-expense">
                  0
               </span>
              </p>
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

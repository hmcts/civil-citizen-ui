{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../../../macro/employer.njk" import employerRow %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}

{% block content %}

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getAllErrors() %}
      {% if errors.length > 0 %}
        {{ govukErrorSummary({
          "titleText": t("There was a problem"),
          "errorList": errors
        }) }}
      {% endif %}
      <h1 class="govuk-heading-l">{{ t('Who employs you?') }}</h1>
      <form method="post" novalidate>
        {{ csrfProtection(csrf) }}
        <div class="govuk-form-group-!-margin-9 {%- if errors[0].text %} govuk-form-group--error{% endif %}">
          {{ govukErrorMessage({ text:t(errors[0].text) })  }}
          {% for employer in form.model.rows %}
            {{employerRow(employer, loop.index0, form.errorFor)}}
          {% endfor %}
        </div>
        <div class="govuk-form-group">
          {{ govukButton({
            text: t("Add another job"),
            classes: "govuk-button--secondary append-row"
          }) }}
        </div>
        <div class="govuk-form-group">
          {{ govukButton({
            text: t("Save and continue")
          }) }}
          {{ contactUsForHelp(t) }}
        </div>
      </form>
    </main>
  </div>

{% endblock %}

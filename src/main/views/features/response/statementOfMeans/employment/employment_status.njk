{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/yesNoForm.njk" import yesNoRadioButton %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set title = "Do you have a job?" %}
      {% set id = "employment" %}
      {% set name = "employment" %}
      {% set errors = form.getErrors() %}
      {% if errors %}
        {{ govukErrorSummary({
          "titleText": "There was a problem",
          "errorList": errors
        }) }}
      {% endif %}
      {% set yesHtml %}
        {{ govukCheckboxes({
          idPrefix: "employmentStatus",
          name: "employmentStatus",
          fieldset: {
            legend: {
              text: t("What's your employment status?"),
            }
          },
          hint: {
            text: t("You can select both.")
          },
          items: [
            {
              value: "employed",
              text: t("Employed")
            },
            {
              value: "selfEmployed",
              text: t("Self-employed")
            }
          ]
        }) }}
      {% endset -%}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post">
            {{ yesNoRadioButton(t,id,name,title,form,{yesHtml: yesHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

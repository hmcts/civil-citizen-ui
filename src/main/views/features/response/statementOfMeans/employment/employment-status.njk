{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/yesNoForm.njk" import yesNoRadioButton %}
{% from "../../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.EMPLOYMENT_STATUS.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set title = t('PAGES.EMPLOYMENT_STATUS.TITLE') %}
      {% set id = "option" %}
      {% set name = "option" %}
      {% set errors = form.getErrors() %}
      {% if errors %}
        {{ govukErrorSummary({
          "titleText": t('ERRORS.THERE_WAS_A_PROBLEM'),
          "errorList": errors
        }) }}
      {% endif %}
      {% set yesHtml %}
        {{ govukCheckboxes({
          idPrefix: "employmentCategory",
          name: "employmentCategory",
          fieldset: {
            legend: {
              text: t('PAGES.EMPLOYMENT_STATUS.STATUS')
            }
          },
          hint: {
            text: t('PAGES.EMPLOYMENT_STATUS.BOTH')
          },
          items: [
            {
              value: EmploymentCategory.EMPLOYED,
              text: t('PAGES.EMPLOYMENT_STATUS.EMPLOYED'),
              checked: true if form.hasEmploymentCategory(EmploymentCategory.EMPLOYED)
            },
            {
              value: EmploymentCategory.SELF_EMPLOYED,
              text: t('PAGES.EMPLOYMENT_STATUS.SELF_EMPLOYED'),
              checked: true if form.hasEmploymentCategory(EmploymentCategory.SELF_EMPLOYED)
            }
          ],
          errorMessage: {
            text:t(form.errorFor('employmentCategory'))
          } if form.hasFieldError('employmentCategory')
        }) }}
      {% endset -%}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            {{ yesNoRadioButton(t,id,name,title,form,'',{yesHtml:yesHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

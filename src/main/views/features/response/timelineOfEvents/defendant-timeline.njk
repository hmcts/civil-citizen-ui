{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/timeline-row.njk" import timelineRow %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% set title = 'Add your timeline of events' %}
{% block pageTitle %}
  {{ setPageTitle(title) }}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getAllErrors() %}
      {% if errors.length > 0 %}
        {{ govukErrorSummary({
          "titleText": t("There was a problem"),
          "errorList": errors
        }) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l govuk-!-margin-bottom-1">{{ t(title) }}</h1>
          <h2 class="govuk-heading-s">{{ t("Add your timeline of events (optional)") }}</h2>
          <p class="govuk-body">{{ t('Include dates if you know them.') }}</p>

          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-grid-column-one-half govuk-!-display-inline govuk-!-padding-left-0">
              <label class="govuk-label--s">
                {{ t('Date') }}
              </label>
              <p class="govuk-hint govuk-!-margin-bottom-0 govuk-!-margin-top-0">
                {{ t('For example, {{ sixMonthAgo }}', { sixMonthAgo: 'now' | addDays(-180) | date }) }}
              </p>
            </div>
            <div class="govuk-grid-column-one-half govuk-!-display-inline govuk-!-padding-left-0">
              <label class="govuk-label--s">{{ t('Description') }}</label>
              <p
                class="govuk-hint govuk-!-margin-bottom-0 govuk-!-margin-top-0">{{ t('For example, you might have signed a contract') }}</p>
            </div>
            {% for timeline in form.model.rows %}
              {{ timelineRow(timeline, loop.index0, form) }}
            {% endfor %}

            {{ govukButton({
              text: t("Add another account"),
              classes: "govuk-button--secondary append-row"
            }) }}
            {{ govukTextarea({
              id: "comment",
              name: "coment",
              value: timelineModel.description,
              classes: "govuk-grid-column-full",
              spellcheck: false,
              errorMessage: {
                text: form.errorFor("comment")
              } if form.hasFieldError( "comment")
            }) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/timeline-row.njk" import timelineRow %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% set title = 'Add your timeline of events' %}
{% block pageTitle %}
  {{ setPageTitle(title) }}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l govuk-!-margin-bottom-1">{{ t(title) }}</h1>
          <h2 class="govuk-heading-s">{{ t("Add your timeline of events (optional)") }}</h2>
          <p class="govuk-body">{{ t('Include dates if you know them.') }}</p>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-grid-column-one-half govuk-!-display-inline">
              <label class="govuk-label--s">
                {{ t('Date') }}
                <p class="govuk-hint">
                  {{ t('For example, {{ sixMonthAgo }}', { sixMonthAgo: 'now' | addDays(-180) | date }) }}
                </p>
              </label>
            </div>
            <div class="govuk-grid-column-one-half govuk-!-display-inline">
              <label class="govuk-label--s">{{ t('Description') }}
                <p class="govuk-hint">{{ t('For example, you might have signed a contract') }}</p>
              </label>
            </div>
            {% for timeline in form.model.rows %}
              {{ timelineRow(timeline, loop.index0, form) }}
            {% endfor %}
            <div class="govuk-grid-column-two-thirds">
              {{ govukButton({
                text: t("Add another account"),
                classes: "govuk-button--secondary append-row"
              }) }}
              <div class="govuk-form-group">
                {{ govukButton({
                  text: t("Save and continue")
                }) }}
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

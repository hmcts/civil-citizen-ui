{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/address.njk" import addressForm %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% set correspondenceAddressClass = '' if postToThisAddress == 'yes' else 'govuk-visually-hidden' %}
{% set addressTitle = t('PAGES.CITIZEN_DETAILS.ADDRESS') %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.CITIZEN_DETAILS.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        {% if errorList.length > 0 %}
          {{ govukErrorSummary({
           "titleText": t('ERRORS.THERE_WAS_A_PROBLEM'),
           "errorList": translateErrors(errorList, t)
        }) }}
        {% endif %}
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.CITIZEN_DETAILS.CONFIRM_YOUR_DETAILS') }}</h1>
          <p class="govuk-body">{{ t('PAGES.CITIZEN_DETAILS.CLAIMANT_DETAILS_PROVIDED') }}</p>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h2 class="govuk-heading-m">{{ t('PAGES.CITIZEN_DETAILS.TITLE') }}</h2>
          <p class="govuk-body">{{ citizenFullName.individualTitle }}</p>
          <h2 class="govuk-heading-m">{{ t('PAGES.CITIZEN_DETAILS.FIRST_NAME') }}</h2>
          <p class="govuk-body">{{ citizenFullName.individualFirstName }}</p>
          <h2 class="govuk-heading-m">{{ t('PAGES.CITIZEN_DETAILS.LAST_NAME') }}</h2>
          <p class="govuk-body">{{ citizenFullName.individualLastName }}</p>
          <form method="post" class="govuk-!-padding-top-4" name="address" novalidate>
            {{ csrfProtection(csrf) }}
            {{ addressForm(
              t,
              citizenAddress = citizenAddress,
              addressLine1Error = addressLine1Error,
              addressCityError = addressCityError,
              addressPostCodeError = addressPostCodeError,
              addressType = 'primary',
              addressTitle = addressTitle
              ) }}
            {% set noHtml %}
            {% endset -%}
            {% set correspondenceAddressHtml %}
            <div class="govuk-form-group" id="postcode">
              <p class="govuk-label govuk-!-margin-bottom-5">{{ t('PAGES.CITIZEN_DETAILS.ALL_CORRESPONDENCE') + t('PAGES.CITIZEN_DETAILS.ADDRESS_FOR_SERVICE') }}</p>
              <label class="govuk-label" for="postcode">
                {{ t('PAGES.CITIZEN_DETAILS.UK_POSTCODE') }}
              </label>
              <div id="postcode-error" class="govuk-visually-hidden govuk-error-message">
                {{ t('PAGES.CITIZEN_DETAILS.ADDRESS_NOT_FOUND') + t('PAGES.CITIZEN_DETAILS.TRY_AGAIN') }}
              </div>
              <input class="govuk-input govuk-input--width-10" id="postcode" name="postcode" type="text" autocomplete="postal-code"/>
              <button href="#" class="govuk-button govuk-button--secondary" data-module="govuk-button" id="findAddressButton">
                {{ t('PAGES.CITIZEN_DETAILS.FIND_ADDRESS') }}
              </button>
              <div id="selectAddress" class="govuk-visually-hidden govuk-!-margin-bottom-2">
                {{ govukSelect({
                    id: "correspondenceAddressList",
                    name: "correspondenceAddressList",
                    label: {
                      text: t('PAGES.CITIZEN_DETAILS.PICK_ADDRESS')
                    },
                    items: []
                  }) }}
              </div>
            </div>
            {% if postToThisAddress == 'no' %}
              <div>
                <a id="enterAddressManually" aria-controls="enterAddressManually" href="#" class="govuk-body govuk-link">
                  {{ t('PAGES.CITIZEN_DETAILS.MANUAL_ADDRESS') }}
                </a>
              </div>
            {% endif %}
            <div id="correspondenceAddress" class="{{ correspondenceAddressClass }}">
              {{ addressForm(
              t,
              citizenAddress = citizenCorrespondenceAddress,
              addressLine1Error = correspondenceAddressLine1Error,
              addressCityError = correspondenceCityError,
              addressPostCodeError = correspondencePostCodeError,
              addressType = 'correspondence',
              addressTitle = addressTitle
              ) }}
            </div>
            {% endset -%}
            <h2 class="govuk-heading-m">{{ t('PAGES.CITIZEN_DETAILS.CORRESPONDENCE_ADDRESS') }}</h2>
            {{ govukRadios({
                  idPrefix: "postToThisAddress",
                  name: "postToThisAddress",
                  fieldset: {
                    legend: {
                      text: t('PAGES.CITIZEN_DETAILS.DIFFERENT_ADDRESS_CORRESPONDENCE'),
                      isPageHeading: false
                    }
                  },
                  items: [
                    {
                      value: "no",
                      text: t('COMMON.NO'),
                      checked: true,
                      conditional: {
                        html: noHtml
                      }
                    },
                    {
                      value: "yes",
                      checked: true if postToThisAddress == 'yes' else false,
                      text: t('PAGES.CITIZEN_DETAILS.YES_CORRESPONDENCE'),
                      conditional: {
                        html: correspondenceAddressHtml
                      }
                    }
                  ]
                }) }}
            {{ govukButton({
                  text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
                }) }}
            {{ contactUsForHelp(t) }}
          </div>
        </form>
      </div>
    </main>
  </div>
{% endblock %}

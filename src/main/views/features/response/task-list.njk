{% set totalClaimAmount ='Â£'+ claim.totalClaimAmount %}
{% set responseDeadLine = claim.formattedResponseDeadline()+ ' at 4pm' %}
{% set remainingDays = '('+claim.getRemainingDays()+' days remaining)' %}
{% set claimNumber = claim.legacyCaseReference %}
    
{% block content %}
  <div class="govuk-width-container govuk-!-padding-top-0">
    <main class="govuk-main-wrapper govuk-!-padding-top-0" role="main">
      <div class="govuk-grid-row govuk-!-margin-top-0">
        <div class="govuk-grid-column-two-thirds govuk-!-margin-top-0">

          <h2 class="govuk-heading-s govuk-!-margin-bottom-2">{{title}}</h2>
          <p class="govuk-body">{{description}}</p>
          <p class="govuk-body govuk-!-margin-bottom-7">
            {{ t('After you have completed all the actions you will be taken to a page where you can check your answers before submitting.') }}
          </p>

          {% for taskList in taskLists %}
            <div class="{{ 'govuk-!-display-none' if taskList.tasks.length===0}}">
              <h2 class="app-task-list__section">
                <span class="app-task-list__section-number">
                  {{loop.index}} . </span>
                {{taskList.title}}
              </h2>
              <ol class="app-task-list app-task-list__items">
                {% for task in taskList.tasks %}
                  <li class="app-task-list__item">
                    <span class="app-task-list__task-name">
                      <a href={{task.url}}>{{task.description}}</a>
                    </span>
                    <strong class="govuk-tag app-task-list__tag {{ 'govuk-tag--grey' if task.status==="INCOMPLETE"}}">
                      {{ task.status }}
                    </strong>
                  </li>
                {% endfor %}
              </ol>
            </div>
          {% endfor %}
        </div>     
         {{ aboutClaimWidget({header:'',lines:[{title: 'Response deadline:', content: responseDeadLine, href: '', hrefContact: '', hint:remainingDays},{title: 'Claim number:', content : claimNumber, href: '', hrefContact: ''},{title: 'Total claim amount:', content:totalClaimAmount},{title: 'Claim details:', href: claimDetailsUrl, hrefContact: 'View claim'}]}) }}
      </div>
    </main>
  </div>
{% endblock %}

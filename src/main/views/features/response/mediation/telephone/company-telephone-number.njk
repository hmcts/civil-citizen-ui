{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/yesNoForm.njk" import yesNoRadioButton %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set title = t("Is David the right person for the mediation service to call?") %}
      {% set id = "option" %}
      {% set name = "option" %}
      {% set errors = form.getErrors() %}
      {% if errors %}
        {{ govukErrorSummary({
          "titleText": t("There was a problem"),
          "errorList": errors
        }) }}
      {% endif %}
      {% set yesHtml %}
        {{ govukInput({
          id: "mediationPhoneNumberConfirmation",
          name: "mediationPhoneNumberConfirmation",
          label: {
            text: t("Confirm telephone number")
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationPhoneNumberConfirmation,
          errorMessage: {
            text:t(form.errorFor('mediationPhoneNumberConfirmation'))
          } if form.hasFieldError('mediationPhoneNumberConfirmation')
        }) }}
      {% endset -%}
      {% set noHtml %}
        {{ govukInput({
          id: "mediationContactName",
          name: "mediationContactName",
          label: {
            text: t("Who should the mediation service call?")
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationContactName,
          errorMessage: {
            text:t(form.errorFor('mediationContactName'))
          } if form.hasFieldError('mediationContactName')
        }) }}
         {{ govukInput({
          id: "mediationPhoneNumber",
          name: "mediationPhoneNumber",
          label: {
            text: t("Enter this personâ€™s phone number, including extension if required. For example, 02012346788 ext. 153" )
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationPhoneNumber,
          errorMessage: {
            text:t(form.errorFor('mediationPhoneNumber'))
          } if form.hasFieldError('mediationPhoneNumber')
        }) }}
      {% endset -%}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form
            method="POST" novalidate>
            {{ csrfProtection(csrf) }}
            {{ yesNoRadioButton(t,id,name,title,form,'',{yesHtml:yesHtml, noHtml:noHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

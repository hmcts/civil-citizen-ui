{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../../macro/yesNoForm.njk" import yesNoRadioButton %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set title = "Is "+contactPerson+" the right person for the mediation service to call?" %}
      {% set id = "option" %}
      {% set name = "option" %}
      {% set errors = form.getErrors() %}
      {% if errors.length > 0 %}
        {{ govukErrorSummary({
          "titleText": t("There was a problem"),
          "errorList": errors
        }) }}
      {% endif %}
      {% set yesHtml %}
        {{ govukInput({
          id: "mediationPhoneNumberConfirmation",
          name: "mediationPhoneNumberConfirmation",
          classes: "govuk-!-width-two-thirds",
          label: {
            text: t("Confirm telephone number")
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationPhoneNumberConfirmation,
          errorMessage: {
            text:t(form.errorFor('mediationPhoneNumberConfirmation'))
          } if form.hasFieldError('mediationPhoneNumberConfirmation')
        }) }}
      {% endset -%}
      {% set noHtml %}
        {{ govukInput({
          id: "mediationContactPerson",
          name: "mediationContactPerson",
          classes: "govuk-!-width-two-thirds",
          label: {
            text: t("Who should the mediation service call?")
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationContactPerson,
          errorMessage: {
            text:t(form.errorFor('mediationContactPerson'))
          } if form.hasFieldError('mediationContactPerson')
        }) }}
         {{ govukInput({
          id: "mediationPhoneNumber",
          name: "mediationPhoneNumber",
          classes: "govuk-!-width-two-thirds",
          label: {
            text: t("Enter this personâ€™s phone number, including extension if required." )
          },
          hint:{
             text: t("For example, 02012346788 ext. 153" )
          },
          type: "text",
          spellcheck: false,
          value: form.model.mediationPhoneNumber,
          errorMessage: {
            text:t(form.errorFor('mediationPhoneNumber'))
          } if form.hasFieldError('mediationPhoneNumber')
        }) }}
      {% endset -%}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form
            method="POST" novalidate>
            {{ csrfProtection(csrf) }}
            <input type="hidden" name="contactPerson" value="{{contactPerson}}">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
              <h1 class="govuk-fieldset__heading">{{ t(title) }}</h1>
            </legend>
            {{ yesNoRadioButton(t,id,name,'',form,'',{yesHtml:yesHtml, noHtml:noHtml}) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("Save and continue")
              }) }}
              {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}

{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle, createPageTitle  %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/button.njk" import addButton %}
{% from "../../../macro/details.njk" import createDetails %}
{% from "../../../macro/textArea.njk" import createTextArea %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
<div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-!-margin-bottom-8">
                    <form method="post" novalidate>
                        {{ csrfProtection(csrf) }}
                        {{ createPageTitle(title,t) }}
                        {{ createDetails( whichComplexityBandToChooseContent ,t) }}
                        <span id="reasonsForBandSelection-description" class="govuk-visually-hidden">
                            {{ t('PAGES.CHOOSE_COMPLEXITY_BAND.COMBO_BOX.TITLE') }}
                        </span>
                        {{ createTextArea("reasonsForBandSelection", form.model.reasonsForBandSelection, form ,t) }}
                        {{ addButton(t, 'SAVE_AND_CONTINUE') }}
                        {{ contactUsForHelp(t) }}
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}

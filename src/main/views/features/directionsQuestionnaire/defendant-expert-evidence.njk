{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.DEFENDANT_EXPERT_EVIDENCE.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        <div class="govuk-grid-row">
          {{ errorSummary(form.getErrors(), t) }}
        </div>
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.DEFENDANT_EXPERT_EVIDENCE.TITLE') }}</h1>
          <p class="govuk-body"> {{ t('PAGES.DEFENDANT_EXPERT_EVIDENCE.LEGAL') }}</p>
          <p class="govuk-body"> {{ t('PAGES.DEFENDANT_EXPERT_EVIDENCE.EVIDENCE') }}</p>
          <p class="govuk-body"> {{ t('PAGES.DEFENDANT_EXPERT_EVIDENCE.DECISION') }}</p>
          <p class="govuk-body"> {{ t('PAGES.DEFENDANT_EXPERT_EVIDENCE.EXPERT') }}</p>
          <form method="post" novalidate autocomplete="off">
            {{ csrfProtection(csrf) }}
            {% set id = "option" %}
            {% set name = "option" %}
            {{ yesNoRadioButton(t,id,name,title,form) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

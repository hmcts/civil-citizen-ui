{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.EXPERT_GUIDANCE.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.EXPERT_GUIDANCE.TITLE') }}</h1>

          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.RARE') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.ASK_PERMISSION') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.JUDGE_DECIDE_COST') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.JUDGES_RESPONSIBLE_COST') }}</p>

          <h2 class='govuk-heading-m'>{{ t('PAGES.EXPERT_GUIDANCE.WHEN_EXPERT_ALLOWED') }}</h2>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.JUDGE_ALLOW_EXPERT') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.FOR_EXAMPLE') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.IF_JUDGE_ALLOWS') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.EXPERT_REPORT') }}</p>

          <h2 class='govuk-heading-m'>{{ t('PAGES.EXPERT_GUIDANCE.PAYING_EXPERT') }}</h2>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.COST_HIRING_EXPERT') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.USUALLY_SHARE_COST') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.IF_YOU_WIN') }}</p>

          <h2 class='govuk-heading-m'>{{ t('PAGES.EXPERT_GUIDANCE.IF_PERMISSION') }}</h2>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.JUDGE_MAY_ASK') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.MUST_AVOID_DISCUSSING') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_GUIDANCE.OTHER_PARTY_CHOOSES') }}</p>
          <ul class="govuk-list govuk-list--number">
            <li>{{ t('PAGES.EXPERT_GUIDANCE.PROVIDE_QUESTIONS') }}</li>
            <li>{{ t('PAGES.EXPERT_GUIDANCE.PROVIDE_EXTRA') }}</li>
            <li>{{ t('PAGES.EXPERT_GUIDANCE.PAY_EXPERT') }}</li>
            <li>{{ t('PAGES.EXPERT_GUIDANCE.SEND_EXPERT_REPORT') }}</li>
          </ul>

          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("COMMON.BUTTONS.CONTINUE")
              }) }}
            </div>
          </form>

          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

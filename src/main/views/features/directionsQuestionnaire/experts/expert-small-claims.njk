{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/csrf.njk" import csrfProtection %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.EXPERT_SMALL_CLAIMS.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.EXPERT_SMALL_CLAIMS.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.EXPERT_SMALL_CLAIMS.RARE_FOR_A_JUDGE') }}</p>
          <p class="govuk-body">{{ t('PAGES.EXPERT_SMALL_CLAIMS.EXPERT_NOT_REPRESENTATIVE') }}</p>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            {{ govukButton({
              text: t("PAGES.EXPERT_SMALL_CLAIMS.CONTINUE")
            }) }}
            <p class="govuk-body">
              <input type="submit" class="link-button" name="expertYes" id="expertYes" value="{{t('PAGES.EXPERT_SMALL_CLAIMS.NEEDS_AN_EXPERT')}}">
            </p>
          </form>
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}


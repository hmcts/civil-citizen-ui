{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from 'govuk/components/textarea/macro.njk' import govukTextarea %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.SPECIFIC_COURT.PAGE_TITLE') }}
{% endblock %}

 {% set courtItems = [{value: '', text: t('PAGES.SPECIFIC_COURT.SELECT_VALUE')}] %}
 {% for item in courtLocations %}
 {% set courtItems = (courtItems.push({
   value: item.label,
   text: item.label,
   selected: form.model.courtLocation === item.label
 }), courtItems) %}
 {% endfor %}

 {% set yesHtml %}
   {{ govukSelect({
   id: "courtLocation",
   name: "courtLocation",
   items: courtItems,
   label: {
     text: t('PAGES.SPECIFIC_COURT.SELECT_COURT')
   },
   errorMessage: {
     text: t(form.errorFor("courtLocation"))
   } if form.hasFieldError("courtLocation")
 }) }}
   {{ govukTextarea({
   name: "reason",
   id: "reason",
   value: form.model.reason,
   label: {
     text: t('PAGES.SPECIFIC_COURT.REASON')
   },
   errorMessage: {
     html: t(form.errorFor("reason"))
   } if form.hasFieldError("reason")
 }) }}
 {% endset %}

 {% block content %}
 {% if form.hasErrors() %}
   {{ errorSummary(form.getErrors(), t) }}
 {% endif %}
   <div class="govuk-width-container">
     <main class="govuk-main-wrapper" role="main">
       <div class="govuk-grid-row">
         <div class="govuk-grid-column-two-thirds">
           <h1 class="govuk-heading-l">{{ t('PAGES.SPECIFIC_COURT.TITLE') }}</h1>
           <p class="govuk-body">{{ t('PAGES.SPECIFIC_COURT.EXPlANATION') }}</p>

           <form method="post" novalidate>
             {{ csrfProtection(csrf) }}
             {{ yesNoRadioButton(t, 'option', 'option', '', form, '', {yesHtml: yesHtml, yes: 'COMMON.VARIATION_2.YES', no: 'COMMON.VARIATION_2.NO'}) }}
             <div class="govuk-form-group">
               {{ govukButton({
                 text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
               }) }}
               {{ contactUsForHelp(t) }}
             </div>
           </form>
         </div>
       </div>
     </main>
   </div>
 {% endblock %}

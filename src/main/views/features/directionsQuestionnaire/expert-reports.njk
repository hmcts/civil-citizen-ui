{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.EXPERT_REPORTS.TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
        <div class="govuk-grid-row">
          {{ errorSummary(form.getErrors(), t) }}
        </div>
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.EXPERT_REPORTS.PAGE_TITLE') }}</h1>

          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

            {{ govukRadios({
              idPrefix: "expertReportsOptions",
              name: "expertReportsOptions",
              items: [
                {
                  value: ExpertReportsOptions.OPTION_YES,
                  text: t('PAGES.EXPERT_REPORTS.OPTION_YES'),
                  checked: form.model.option === ExpertReportsOptions.OPTION_YES
                },
                {
                  value: ExpertReportsOptions.OPTION_NO,
                  text: t('PAGES.EXPERT_REPORTS.OPTION_NO'),
                  checked: form.model.option === ExpertReportsOptions.OPTION_NO
                },
                {
                  value: ExpertReportsOptions.OPTION_NOT_RECEIVED,
                  text: t('PAGES.EXPERT_REPORTS.OPTION_NOT_RECEIVED'),
                  checked: form.model.option === ExpertReportsOptions.OPTION_NOT_RECEIVED
                }
              ],
              errorMessage: {
                html: t(form.errorFor('option'))
                } if form.hasErrors()
              }) }}

            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

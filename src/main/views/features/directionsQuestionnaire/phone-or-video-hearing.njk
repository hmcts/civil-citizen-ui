{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.PHONE_OR_VIDEO_HEARING.PAGE_TITLE') }}
{% endblock %}

{% block content %}
   {% if form.hasErrors() %}
     {{ errorSummary(form.getErrors(), t) }}
   {% endif %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.PHONE_OR_VIDEO_HEARING.TITLE') }}</h1>
          <p class="govuk-body">{{ t('PAGES.PHONE_OR_VIDEO_HEARING.JUDGE_DECISION') }}</p>

          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

            {% set yesHtml %}
              {{ govukTextarea({
                name: "details",
                id: "details",
                value: form.model.details,
                label: {
                  text: t('PAGES.PHONE_OR_VIDEO_HEARING.TELL_US_WHY')
                },
                errorMessage: {
                  html: t(form.errorFor("details"))
                } if form.hasFieldError("details")
              }) }}
            {% endset %}

            {{ yesNoRadioButton(t, 'option', 'option', '', form, '', {yesHtml: yesHtml}) }}

            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

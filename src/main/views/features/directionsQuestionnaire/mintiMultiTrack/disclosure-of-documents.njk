{% extends "claim-details-tpl.njk" %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle, createPageTitle  %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/button.njk" import addButton %}
{% from "../../../macro/details.njk" import createDetails %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}


{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
{% set checkboxItems = [] %}
{% for item in form.model.documentsTypeForm %}
{% set checkboxItems = (checkboxItems.push(
    {
      text: t(item.text),
      value: item.value,
      checked: item.checked,
      hint: {
        text: t(item.hint)
      }
    }), checkboxItems) %}
{% endfor %}

{% set html %}
  {{ createDetails( whatIsDifferenceContent ,t) }}
{% endset %}
{% if form.hasErrors() %}
<div class="govuk-grid-row">
    {{ errorSummary(form.getErrors(), t) }}
</div>
{% endif %}
<div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-!-margin-bottom-8">
                    <form method="post" novalidate>
                        {{ csrfProtection(csrf) }}
                        {{ createPageTitle(pageTitle,t) }}
                        {{ createDetails( whatIsDisclosureDetailsContent ,t) }}
                        {{
                          govukCheckboxes({
                                            idPrefix: 'documentsTypeForm',
                                            id: 'documentsTypeForm',
                                            name: 'documentsTypeForm',
                                            fieldset: {
                                              legend: {
                                                text: t(form.model.title),
                                                isPageHeading: false,
                                                classes: "govuk-fieldset__legend--m"
                                              }
                                          },
                          hint: {
                            html: html
                          },
                          items: checkboxItems,
                          errorMessage: {
                            text:t(form.errorFor('documentsTypeForm'))
                          } if form.hasErrors()
                        })
                        }}
                        {{ addButton(t, 'SAVE_AND_CONTINUE') }}
                        {{ contactUsForHelp(t) }}
                    </form>
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}

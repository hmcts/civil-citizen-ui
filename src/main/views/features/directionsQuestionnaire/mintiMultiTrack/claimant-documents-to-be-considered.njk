{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle, createPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/button.njk" import addButton %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
  {% set yesHtml %}
    <p class="govuk-body">
      {{ t(pageTitle) }}
    </p>
  {% endset -%}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main" aria-labelledby="page-title">
      {% if form.hasErrors() %}
        {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <div class="govuk-!-margin-bottom-8">
              <span id="page-title" class="govuk-visually-hidden">{{ title }}</span>
              {{ createPageTitle(title,t) }}
              {{ createPageTitle(componentText,t, 'm') }}
            <form method="post" novalidate aria-describedby="page-title">
              {{ csrfProtection(csrf) }}
              {{ yesNoRadioButton(t, 'option', 'option', '', form, '', {classes: 'govuk-radios', yes: 'COMMON.VARIATION_8.YES', no: 'COMMON.VARIATION_8.NO'}) }}

              {{ addButton(t, 'SAVE_AND_CONTINUE') }}
              {{ contactUsForHelp(t) }}
          </form>
          </div>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

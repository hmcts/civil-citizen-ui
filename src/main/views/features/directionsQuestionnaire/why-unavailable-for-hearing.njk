{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.WHY_UNAVAILABLE_FOR_HEARING.PAGE_TITLE') }}
{% endblock %}

{% block content %}
   {% if form.hasErrors() %}
     {{ errorSummary(form.getErrors(), t) }}
   {% endif %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.WHY_UNAVAILABLE_FOR_HEARING.TITLE', {days:days}) }}</h1>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}

              {{ govukTextarea({
                name: "reason",
                id: "reason",
                value: form.model.details,
                label: {
                  text: t('PAGES.WHY_UNAVAILABLE_FOR_HEARING.MUST_TELL_US_WHY')
                },
                errorMessage: {
                  html: t(form.errorFor("reason"))
                } if form.hasFieldError("reason")
              }) }}


            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

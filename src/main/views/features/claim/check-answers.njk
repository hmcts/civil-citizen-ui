{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/statement-of-truth.njk" import statementOfTruth %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/error-summary.njk" import errorSummary %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.CHECK_YOUR_ANSWER.TITLE') }}
{% endblock %}
{% set submitText = t('COMMON.BUTTONS.SUBMIT_CLAIM') %}
{% set labelHtml = t('PAGES.CHECK_YOUR_ANSWER.RESPONSE_CHECKBOX')
                    + '<p class="govuk-!-margin-top-2">'
                    + t('PAGES.CHECK_YOUR_ANSWER.RESPONSE_CHECKBOX_PROCEEDINGS')
                    +'</p>' %}
{% if payment %}
  {% set submitText = t('COMMON.BUTTONS.SUBMIT_RESPONSE_PAYMENT', { payment: payment }) %}
      {% if signatureType === SignatureType.BASIC %}
        {% set labelHtml = t('COMMON.STATEMENT_OF_TRUTH.DETAILS_TRUTHY') %}
      {% endif %}
{% endif %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
         {{ errorSummary(form.getErrors(), t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t('PAGES.CHECK_YOUR_ANSWER.TITLE') }}</h1>

          {% for section in summarySections.sections %}
            <h2 class="govuk-heading-m govuk-!-margin-bottom-2">{{ section.title }}</h2>
            <div class="govuk-form-group">
              {{ govukSummaryList({
                rows: section.summaryList.rows
              }) }}
            </div>
          {% endfor %}
          <form method="post" novalidate autocomplete="off">
            {{ csrfProtection(csrf) }}
            <input type="hidden" name="type" value="{{ form.model.type }}">
           {{ statementOfTruth(
             t,
             form,
             SignatureType.RESPONSE,
             labelHtml,
             isQualified = (signatureType === SignatureType.QUALIFIED)
           ) }}
            <div class="govuk-form-group">
              {{ govukButton({
                 text: submitText
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>

{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/yesNoGenericForm.njk" import yesNoRadioButton %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% if form.hasErrors() %}
          {{ errorSummary(form.getErrors(), t) }}
        {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <form method="post" novalidate autocomplete="off">
            {{ csrfProtection(csrf) }}
            <fieldset class="govuk-fieldset" aria-describedby="delayed-flight-hint">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-heading-l">{{ t('PAGES.DELAYED_FLIGHT.CLAIMING_FOR_DELAYED') }}</h1>
              </legend>
             <span id="delayed-flight-hint" class="govuk-hint govuk-visually-hidden">
               {{ t('PAGES.DELAYED_FLIGHT.CLAIMING_FOR_DELAYED') }}
             </span>
              {{ yesNoRadioButton(t, 'option', 'option', '', form, '', {classes: 'govuk-radios--inline'}) }}
            </fieldset>
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
             <div class="govuk-no-underline">
               {{ contactUsForHelp(t) }}
             </div>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "../../../macro/address.njk" import addressForm %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/error-summary.njk" import errorSummary %}

{% set payingExtra = t('PAGES.DEFENDANT_DETAILS.PAYING_EXTRA') %}
{% set correspondenceAddressClass = 'govuk-visually-hidden' %}
{% if defendantType === partyType.INDIVIDUAL %}
  {% set title = t('PAGES.DEFENDANT_DETAILS.PAGE_TITLES.INDIVIDUAL') %}
{% elif defendantType === partyType.COMPANY %}
  {% set title = t('PAGES.DEFENDANT_DETAILS.PAGE_TITLES.COMPANY') %}
{% elif defendantType === partyType.ORGANISATION %}
  {% set title = t('PAGES.DEFENDANT_DETAILS.PAGE_TITLES.ORGANISATION') %}
  {% set payingExtra = t('PAGES.DEFENDANT_DETAILS.PAYING_EXTRA_ORGANISATION') %}
{% elif defendantType === partyType.SOLE_TRADER %}
  {% set title = t('PAGES.DEFENDANT_DETAILS.PAGE_TITLES.SOLE_TRADER') %}
{% else %}
  {% set title = '' %}
{% endif %}

{% set formErrors = form.getAllErrors() %}
{% set primaryAddressFormErrors = primaryAddressForm.getAllErrors() %}

{% block pageTitle %}
  {{ setPageTitle(title) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        {% if form.hasErrors() or primaryAddressForm.hasErrors() %}
          {{ errorSummary(formErrors.concat(primaryAddressFormErrors), t) }}
        {% endif %}
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ title }}</h1>
          <p class="govuk-body">{{ payingExtra }}</p>

          <form method="post" name="address" novalidate>
            {{ csrfProtection(csrf) }}

            {% if defendantType === partyType.ORGANISATION %}
              {{ govukInput({
                label: {
                  text: t('PAGES.DEFENDANT_DETAILS.ORGANISATION_NAME')
                },
                classes: 'govuk-!-width-one-half',
                id: 'partyName',
                name: 'partyName',
                value: form.model.partyName,
                errorMessage: { text: t(form.errorFor('partyName')) } if form.errorFor('partyName')
              }) }}

              {{ govukInput({
                label: {
                  text: t('PAGES.DEFENDANT_DETAILS.CONTACT_PERSON')
                },
                hint: {
                  text: t('PAGES.DEFENDANT_DETAILS.CONTACT_PERSON_HINT')
                },
                classes: 'govuk-!-width-one-half',
                id: 'contactPerson',
                name: 'contactPerson',
                value: form.model.contactPerson,
                errorMessage: { text: t(form.errorFor('contactPerson')) } if form.errorFor('contactPerson')
              }) }}
              <h2 class="govuk-heading-m">{{ t('PAGES.DEFENDANT_DETAILS.ORGANISATION_ADDRESS') }}</h2>
              <p class="govuk-body">
                {{
                  t('PAGES.DEFENDANT_DETAILS.ORGANISATION_ADDRESS_NOT_CORRECT') + ' ' + t('PAGES.DEFENDANT_DETAILS.ORGANISATION_ANY_CHANGES')
                }}
              </p>
              <p class="govuk-body">
                {{
                t('PAGES.DEFENDANT_DETAILS.ORGANISATION_MAIN_OFFICE') + ' ' + t('PAGES.DEFENDANT_DETAILS.ENGLAND_OR_WALES_ADDRESS')
                }}
              </p>

              <div class="govuk-form-group" id="primaryPostcodeContainer">
                <h2 class="govuk-heading-m">{{ addressTitle }}</h2>
                <p class="govuk-body">{{ t('COMMON.ADDRESS_FORM.CHANGE_ADDRESS') }} {{ t('COMMON.ADDRESS_FORM.ADDRESS_CHANGES_SHARED') }}</p>
                <label class="govuk-label" for="primaryPostcode">
                  {{ t('PAGES.DEFENDANT_DETAILS.UK_POSTCODE') }}
                </label>
                <div id="primaryPostcode-error" class="govuk-visually-hidden govuk-error-message">
                  {{ t('ERRORS.ADDRESS_NOT_FOUND') + t('ERRORS.TRY_AGAIN') }}
                </div>
                <input class="govuk-input govuk-input--width-10" id="primaryPostcode" name="primaryPostcode" type="text" autocomplete="postal-code"/>
                <button href="#" class="govuk-button govuk-button--secondary findAddressButton" data-module="govuk-button" id="primaryfindAddressButton">
                  {{ t('PAGES.DEFENDANT_DETAILS.FIND_ADDRESS') }}
                </button>
                <div id="primarySelectAddress" class="govuk-visually-hidden">
                  {{ govukSelect({
                    id: "primaryAddressList",
                    name: "primaryAddressList",
                    classes: 'addressList',
                    label: {
                      text: t('PAGES.DEFENDANT_DETAILS.PICK_ADDRESS')
                    },
                    items: []
                  }) }}
                </div>
              </div>
              <div>
                <a id="primaryEnterAddressManually" aria-controls="enterAddressManually" href="#" class="govuk-body govuk-link enterAddressManually">
                  {{ t('PAGES.DEFENDANT_DETAILS.MANUAL_ADDRESS') }}
                </a>
              </div>
              <div id="primaryAddress" class="{{ correspondenceAddressClass }}">
                {{ addressForm(
                  t,
                  citizenAddress = primaryAddressForm,
                  addressType = 'primary',
                  addressTitle = ''
                ) }}
              </div>
            {% endif %}

            {{ govukButton({
              text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE'),
              classes: 'govuk-!-margin-top-4'
            }) }}
            {{ contactUsForHelp(t) }}
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

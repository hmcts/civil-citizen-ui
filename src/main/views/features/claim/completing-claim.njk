{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/csrf.njk" import csrfProtection %}

{% block pageTitle %}
  {{ setPageTitle('PAGES.COMPLETING_CLAIM.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          <div class="govuk-!-margin-bottom-8">
            <h1 class="govuk-heading-l">{{ t('PAGES.COMPLETING_CLAIM.PAGE_TITLE') }}</h1>
            <p class="govuk-body">{{ t('PAGES.COMPLETING_CLAIM.YOULL_HAVE_TO_PAY') }}:</p>
          </div>

          <div class="govuk-!-margin-bottom-8">
            <ul class="govuk-list govuk-list--bullet">
              <li>{{ t('PAGES.COMPLETING_CLAIM.CHANGE_THE_NAME') }}</li>
              <li>{{ t('PAGES.COMPLETING_CLAIM.CHANGE_THE_BASIS') }}</li>
              <li>{{ t('PAGES.COMPLETING_CLAIM.ADD_INFORMATION') }}</li>
            </ul>
          </div>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-form-group">
              {{ govukButton({
                text: t("COMMON.BUTTONS.I_CONFIRM_IVE_READ_THIS")
              }) }}
              {{ contactUsForHelp(t) }}
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>
{% endblock %}

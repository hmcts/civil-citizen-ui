{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../../../macro/contact-us-for-help.njk" import contactUsForHelp with context %}
{% from "../../../macro/csrf.njk" import csrfProtection %}
{% from "../../../macro/error-summary.njk" import errorSummary %}
{% from "../../../macro/page-title.njk" import setPageTitle %}
{% from "../../../macro/claim-amount.njk" import claimAmount %}

{% block pageTitle %}
  {{ setPageTitle(t, pageTitle) }}
{% endblock %}

{% set length = form.model.claimAmountRows.length %}
{% set claimAmountError = form.errorFor('claimAmountRows') %}
{% block content %}
  {% if form.hasErrors() %}
    {{ errorSummary(form.getAllErrors(), t) }}
  {% endif %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          <h1 class="govuk-heading-l">{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.TITLE') }} </h1>
          <p class="govuk-body">{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.DESCRIPTION') }}</p>
          <p class="govuk-body">{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.DONT_INCLUDE') }}</p>
          <ul class="govuk-list govuk-list--bullet">
            <li>{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.INTEREST') }}</li>
            <li>{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.CLAIM_FEE') }}</li>
          </ul>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div id="claimAmountRows" class="govuk-form-group {% if claimAmountError %} govuk-form-group--error {% endif %}">
              {% if claimAmountError %}
                <p class="govuk-error-message">
                  <span class="govuk-visually-hidden">{{ t('ERRORS.ERROR') }} :</span> {{ t(claimAmountError) }}
                </p>
              {% endif %}
              <div class="govuk-grid-column-one-half govuk-grid-column-two-thirds-from-desktop govuk-form-group">
                <span id="claim-reason-heading" class="govuk-label govuk-label--s">
                  {{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.REASON') }}
                </span>
                <p class="govuk-hint govuk-!-margin-bottom-0 govuk-!-margin-top-0">
                  {{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.HINT') }}
                </p>
              </div>
              <div class="govuk-grid-column-one-half govuk-grid-column-one-third-from-desktop">
                <span id="claim-amount-heading" class="govuk-label govuk-label--s">
                  {{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.AMOUNT') }}
                </span>
                <p class="govuk-hint govuk-!-margin-bottom-0 govuk-!-margin-top-0"></p>
              </div>
              {% for claimAmountRow in form.model.claimAmountRows %}
                {% if loop.index == 1 %}
                  {% set ordinal = 'first' %}
                {% elseif loop.index == 2 %}
                  {% set ordinal = 'second' %}
                {% elseif loop.index == 3 %}
                  {% set ordinal = 'third' %}
                {% else %}
                  {% set ordinal = loop.index ~ 'th' %}
                {% endif %}
                <span
                  id="claim-row-label-{{ loop.index0 }}"
                  class="govuk-visually-hidden"
                >
                  What is the {{ ordinal }} thing you are claiming for?
                  Amount for {{ ordinal }} claim in pounds.
                </span>

                {{ claimAmount(claimAmountRow, loop.index0, form, t, {
                  'aria-labelledby': 'claim-row-label-' ~ loop.index0
                }) }}
              {% endfor %}
            </div>
            <div class="govuk-grid-column-full">
              {{ govukButton({
                text: t('PAGES.CLAIM_AMOUNT_BREAKDOWN.ADD_ANOTHER_ROW'),
                classes: "govuk-button--secondary append-row"
              }) }}

              <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
              <div class="language">
                <h2 class="govuk-heading-m govuk-!-margin-bottom-0">
                  <span aria-hidden="true">Â£</span>
                  <span class="total-claim-amount" aria-label="{{ t('PAGES.CLAIM_AMOUNT_BREAKDOWN.TOTAL_AMOUNT') }}">
                    0
                  </span>
                  <input type="hidden" class="total-claim-amount" name="totalAmount" value="{{ form.model.totalAmount }}"/>
                </h2>
              </div>
            </div>
            <div class="govuk-grid-column-two-thirds">
              <div class="govuk-form-group">
                {{ govukButton({
                  text: t("COMMON.BUTTONS.SAVE_AND_CONTINUE")
                }) }}
                {{ contactUsForHelp(t) }}
              </div>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>

  <script>
    (function () {
      function getOrdinal(index) {
        if (index === 0) return 'first';
        if (index === 1) return 'second';
        if (index === 2) return 'third';
        return (index + 1) + 'th';
      }

      function updateClaimRowAccessibility() {
        var rows = document.querySelectorAll('.row-container');

        rows.forEach(function (row, index) {
          var ordinal = getOrdinal(index);

          var label = row.querySelector('[id^="claim-row-label-"]');
          if (label) {
            label.id = 'claim-row-label-' + index;
            label.textContent =
              'What is the ' + ordinal + ' thing you are claiming for? ' +
              'Amount for ' + ordinal + ' claim in pounds.';
          }

          var reason = row.querySelector('input[name*="[reason]"]');
          var amount = row.querySelector('input[name*="[amount]"]');

          if (reason) {
            reason.setAttribute(
              'aria-labelledby',
              'claim-row-label-' + index + ' ' + reason.id + '-label'
            );
          }

          if (amount) {
            amount.setAttribute(
              'aria-labelledby',
              'claim-row-label-' + index + ' ' + amount.id + '-label'
            );
          }
        });
      }

      document.addEventListener('click', function (e) {
        if (e.target.closest('.append-row')) {
          setTimeout(updateClaimRowAccessibility, 0);
        }
      });
    })();
  </script>
{% endblock %}

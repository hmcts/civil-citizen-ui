{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% from "../../macro/csrf.njk" import csrfProtection %}
{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../../macro/error-summary.njk" import errorSummary %}
{% block pageTitle %}
  {{ setPageTitle('PAGES.CLAIMANT_PHONE.PAGE_TITLE') }}
{% endblock %}
{% block content %}
  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" role="main">
      {% set errors = form.getErrors() %}
      {% if errors.length %}
        {{ errorSummary(errors, t) }}
      {% endif %}
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">{{ t("PAGES.CLAIMANT_PHONE.TITLE") }}</h1>
          <p class="govuk-body">
            {{ t("PAGES.CLAIMANT_PHONE.INFORMATION") }}
          </p>
          <p class="govuk-body">{{ t("PAGES.CLAIMANT_PHONE.NUMBER_INFORMATION") }}</p>
          <form method="post" novalidate>
            {{ csrfProtection(csrf) }}
            <div class="govuk-form-group {%- if form.errorFor('telephoneNumber') %} govuk-form-group--error{% endif %}">
              {{ govukInput({
                id: "phoneNumber",
                name: "phoneNumber",
                value: form.model.telephoneNumber,
                label: {
                  text: t('PAGES.CLAIMANT_PHONE.TITLE'),
                  classes: 'govuk-visually-hidden'
                },
                errorMessage: {
                  html: t(form.errorFor('telephoneNumber'))
                } if form.hasErrors()
              }) }}
            </div>
            <div class="govuk-form-group">
              {{ govukButton({
                text: t('COMMON.BUTTONS.SAVE_AND_CONTINUE')
              }) }}
            </div>
          </form>
        </div>
      </div>
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-three-thirds">
          {{ contactUsForHelp(t) }}
        </div>
      </div>
    </main>
  </div>
{% endblock %}

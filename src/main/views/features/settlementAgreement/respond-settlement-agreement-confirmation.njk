{% extends "claim-details-tpl.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "../../macro/page-title.njk" import setPageTitle %}
{% from "../dashboard/item-content.njk" import itemContent %}
{% from "../../macro/external-link.njk" import externalLink %}
{% from "../../macro/contact-us-for-help.njk" import contactUsForHelp %}
{% import "external-urls.njk" as externalURLs %}

{% block pageTitle %}
  {{ setPageTitle(t, 'PAGES.DEFENDANT_RESPOND_TO_SETTLEMENT_AGREEMENT_CONFIRMATION.PAGE_TITLE') }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {% for item in claimantResponseConfirmationContent %}
        {{ itemContent(item,t) }}
      {% endfor %}
      <p class="govuk-body">
        {{ externalLink(t, 'PAGES.SUBMIT_CONFIRMATION.YOUR_OPINION_OF_SERVICE', externalURLs.smartSurveyUrl, true) }}
      </p>
      <div class="form-group">
      {{ govukButton({
        text: t('PAGES.SUBMIT_CONFIRMATION.GO_TO_ACCOUNT'),
        href: '/dashboard'
      }) }}
      </div>
        {{ contactUsForHelp(t, '', true) }}
    </div>
  </div>
{% endblock %}

  {% include "webpack/css.njk" %}
{% endblock %}

{% block pageTitle %}
  {{setPageTitle(t, pageTitle)}}
{% endblock %}

{% block skipLink %}
  {{ govukSkipLink({
    href: "#main-content",
    text: "Skip to main content"
  }) }}
{% endblock %}
{% block header %}
  {{ headerComponent(t, user) }}
{% endblock %}

{% block beforeContent %}

{{ govukPhaseBanner({
        tag: {
          text: "beta"
        },
        html: bannerText + languageToggle
      }) }}

{% if backLinkUrl %}
  {{ back(backLinkUrl, t, false, false) }}
{% elseif dashboardUrl %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: t('COMMON.HOME'),
        href: dashboardUrl
      },
      {
        text: t(pageTitle)
      }
    ]
  }) }}
{% else %}
    {{ govukBreadcrumbs({
      items: [
        {
          text: t('COMMON.HOME')
        }
      ]
    }) }}
{% endif %}
{% endblock %}

{% block bodyStart %}

<!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id={{ gtmScriptId }}&nojscript=true"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
  {{ cookieBanner(t) }}
{% endblock %}
{% block content %}
<div class="govuk-grid-row">
  {% if form != null and form.hasErrors() %}
    {{ errorSummary(form.getAllErrors(), t) }}
  {% endif %}
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% block nestedContent %}{% endblock %}
  </div>
  <div class="govuk-grid-column-one-third">
    {% if iWantToLinks != null and iWantToLinks.length %}
        <div class="govuk-!-margin-bottom-8">
          {{ supportLinks(t, iWantToTitle, iWantToLinks) }}
        </div>
      {% endif %}
      {% if helpSupportLinks != null and helpSupportLinks.length %}
        {{ supportLinks(t, helpSupportTitle, helpSupportLinks) }}
    {% endif %}
    {{ contactUsForHelp(t) }}
  </div>
</div>
{% endblock %}
{% block footer %}
{% if developmentMode != 'production' %}
{{ govukFooter({
    meta: {
      items: [
        {
          href: urls.COOKIES_URL,
          text: t("FOOTER.COOKIES_URL")
        },
        {
          href: PrivacyPolicyUrl,

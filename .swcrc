{
  "jsc": {
    "parser": { "syntax": "typescript", "tsx": true, "decorators": true },

    "transform": {
      "useDefineForClassFields": false,   // strip “= undefined” fields
      "hidden": { "jest": true }          // this is to hoist jest.mock / jest.spyOn
    },
    "externalHelpers": false,

    "experimental": {
      "plugins": [
        ["swc_mut_cjs_exports", {}]
      ]
    }
  },

  "module": { "type": "commonjs", "noInterop": true },
  "sourceMaps": false
}

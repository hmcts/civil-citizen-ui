{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "router/*": [
        "main/router/*"
      ],
      "common/*": [
        "main/common/*"
      ],
      "models/*": [
        "main/common/models/*"
      ],
      "modules/*": [
        "main/modules/*"
      ],
      "client/*": [
        "main/app/client/*"
      ],
      "routes/*": [
        "main/routes/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}

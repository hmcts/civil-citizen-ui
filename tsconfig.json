{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "lib": [
      "es6",
      "es2017.object",
      "dom"
    ],
    "baseUrl": "src/main",
    "paths": {
      "common/*": [
        "common/*"
      ],
      "models/*": [
        "common/models/*"
      ],
      "form/*": [
        "common/form/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "client/*": [
        "app/client/*"
      ],
      "routes/*": [
        "routes/*"
      ],
      "services/*": [
        "services/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}
